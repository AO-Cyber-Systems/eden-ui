<% content = capture do %>
  <% fields_for(resource_name, resource) do |f| %>
    <%= eden_sign_up_form(
      url: registration_path(resource_name),
      form: f,
      password_hint: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : nil,
      terms_url: "#",
      sign_in_url: new_session_path(resource_name),
      social_buttons: render("devise/shared/social_buttons")
    ) do %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>
  <% end %>
<% end %>
<%= render partial: "eden_ui/layouts/auth", locals: { app_name: EdenUi.configuration.app_name, logo_path: EdenUi.configuration.logo_path, content: content } %>
