<% content = capture do %>
  <% fields_for(resource_name, resource) do |f| %>
    <%= eden_sign_in_form(
      url: session_path(resource_name),
      form: f,
      remember_me: devise_mapping.rememberable?,
      forgot_password_url: devise_mapping.recoverable? ? new_password_path(resource_name) : nil,
      sign_up_url: devise_mapping.registerable? ? new_registration_path(resource_name) : nil,
      social_buttons: render("devise/shared/social_buttons")
    ) do %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <% end %>
  <% end %>
<% end %>
<%= render partial: "eden_ui/layouts/auth", locals: { app_name: EdenUi.configuration.app_name, logo_path: EdenUi.configuration.logo_path, content: content } %>
