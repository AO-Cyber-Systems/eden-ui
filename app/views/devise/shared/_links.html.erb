<div class="mt-4 text-sm font-medium text-gray-500 dark:text-gray-400 space-y-2">
  <%- if controller_name != "sessions" %>
    <p>
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != "registrations" %>
    <p>
      Don't have an account yet?
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
    <p>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
    <p>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
    <p>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-primary-600 hover:underline dark:text-primary-500" %>
    </p>
  <% end %>
</div>
