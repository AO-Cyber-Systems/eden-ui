<%
  title ||= nil
  open ||= false
  id ||= "accordion-item-#{title&.parameterize}"
  html_options ||= {}
  content ||= nil
%>

<div data-controller="eden-accordion" <%= tag.attributes(html_options) %>>
  <h2>
    <button type="button" class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-zinc-500 border-b border-zinc-200 dark:border-zinc-700 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-800 gap-3 <%= open ? "bg-zinc-100 dark:bg-zinc-800 text-zinc-900 dark:text-white" : "" %>" data-action="eden-accordion#toggle" aria-expanded="<%= open %>">
      <span><%= title %></span>
      <svg class="w-3 h-3 shrink-0 <%= open ? "rotate-180" : "" %> transition-transform" data-eden-accordion-target="icon" fill="none" viewBox="0 0 10 6"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/></svg>
    </button>
  </h2>
  <div data-eden-accordion-target="body" class="<%= open ? "" : "hidden" %>">
    <div class="p-5 border-b border-zinc-200 dark:border-zinc-700 dark:bg-zinc-900">
      <p class="text-zinc-500 dark:text-zinc-400"><%= content %></p>
    </div>
  </div>
</div>
