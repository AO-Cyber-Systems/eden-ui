<%
  name ||= "search"
  id ||= name
  placeholder ||= "Search..."
  value ||= nil
  button_text ||= "Search"
  size ||= :md
  html_options ||= {}
  content ||= nil

  size_classes = case size.to_sym
  when :sm then "p-2 ps-10 text-xs"
  when :lg then "p-4 ps-10 text-base"
  else "p-2.5 ps-10 text-sm"
  end
%>

<form class="flex items-center max-w-lg" <%= tag.attributes(html_options) %>>
  <label for="<%= id %>" class="sr-only">Search</label>
  <div class="relative w-full">
    <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
      <svg class="w-4 h-4 text-zinc-500 dark:text-zinc-400" fill="none" viewBox="0 0 20 20"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/></svg>
    </div>
    <input type="search" name="<%= name %>" id="<%= id %>" class="bg-zinc-50 border border-zinc-300 text-zinc-900 rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full <%= size_classes %> dark:bg-zinc-700 dark:border-zinc-600 dark:placeholder-zinc-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="<%= placeholder %>" <% if value %>value="<%= value %>"<% end %>>
  </div>
  <button type="submit" class="p-2.5 ms-2 text-sm font-medium text-white bg-primary-700 rounded-lg border border-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
    <svg class="w-4 h-4" fill="none" viewBox="0 0 20 20"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/></svg>
    <span class="sr-only"><%= button_text %></span>
  </button>
</form>
