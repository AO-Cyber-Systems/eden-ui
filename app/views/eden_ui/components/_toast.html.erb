<%
  variant ||= :default
  dismissible ||= true
  position ||= :"top-right"
  auto_dismiss ||= nil
  icon ||= nil
  message ||= nil
  html_options ||= {}
  content ||= nil

  position_classes = case position.to_sym
  when :"top-left" then "fixed top-5 start-5"
  when :"top-center" then "fixed top-5 start-1/2 -translate-x-1/2"
  when :"bottom-right" then "fixed bottom-5 end-5"
  when :"bottom-left" then "fixed bottom-5 start-5"
  when :"bottom-center" then "fixed bottom-5 start-1/2 -translate-x-1/2"
  else "fixed top-5 end-5"
  end

  icon_classes = case variant.to_sym
  when :success
    "inline-flex items-center justify-center shrink-0 w-8 h-8 text-green-500 bg-green-100 rounded-lg dark:bg-green-800 dark:text-green-200"
  when :danger
    "inline-flex items-center justify-center shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg dark:bg-red-800 dark:text-red-200"
  when :warning
    "inline-flex items-center justify-center shrink-0 w-8 h-8 text-orange-500 bg-orange-100 rounded-lg dark:bg-orange-700 dark:text-orange-200"
  else
    "inline-flex items-center justify-center shrink-0 w-8 h-8 text-blue-500 bg-blue-100 rounded-lg dark:bg-blue-800 dark:text-blue-200"
  end

  icon_svg = case variant.to_sym
  when :success
    '<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/>'
  when :danger
    '<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 11.793a1 1 0 1 1-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 0 1-1.414-1.414L8.586 10 6.293 7.707a1 1 0 0 1 1.414-1.414L10 8.586l2.293-2.293a1 1 0 0 1 1.414 1.414L11.414 10l2.293 2.293Z"/>'
  when :warning
    '<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM10 15a1 1 0 1 1 0-2 1 1 0 0 1 0 2Zm1-4a1 1 0 0 1-2 0V6a1 1 0 0 1 2 0v5Z"/>'
  else
    '<path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>'
  end

  classes = ["flex items-center w-full max-w-xs p-4 text-gray-500 bg-white rounded-lg shadow-sm dark:text-gray-400 dark:bg-gray-800 z-50", position_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<div data-controller="eden-toast" <% if auto_dismiss %>data-eden-toast-auto-dismiss-value="true" data-eden-toast-duration-value="<%= auto_dismiss.to_i * 1000 %>"<% else %>data-eden-toast-auto-dismiss-value="false"<% end %> class="<%= classes %>" role="alert" <%= tag.attributes(html_options) %>>
  <div class="<%= icon_classes %>">
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><%= icon_svg.html_safe %></svg>
  </div>
  <div class="ms-3 text-sm font-normal"><%= message || content %></div>
  <% if dismissible %>
    <button type="button" data-action="eden-toast#dismiss" class="ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700">
      <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
    </button>
  <% end %>
</div>
