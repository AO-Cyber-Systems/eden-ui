<%
  label ||= "Menu"
  full_width ||= true
  html_options ||= {}
  content ||= nil

  classes = ["w-full bg-white border-y border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-600", html_options.delete(:class)].compact_blank.join(" ")
%>

<div class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <div class="grid max-w-screen-xl px-4 py-5 mx-auto text-gray-900 dark:text-white sm:grid-cols-2 md:grid-cols-3 md:px-6">
    <%= content %>
  </div>
</div>
