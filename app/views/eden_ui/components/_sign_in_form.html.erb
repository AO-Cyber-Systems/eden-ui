<%
  url ||= "#"
  method ||= :post
  heading ||= "Sign in to your account"
  form ||= nil
  resource_name ||= nil
  remember_me = local_assigns.fetch(:remember_me, true)
  forgot_password_url ||= nil
  sign_up_url ||= nil
  sign_up_text ||= "Don't have an account yet?"
  submit_text ||= "Sign in"
  social_buttons ||= nil
  html_options ||= {}
  content ||= nil

  input_classes = "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
  label_classes = "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
  checkbox_classes = "w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800"
  submit_classes = "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 cursor-pointer"
  link_classes = "font-medium text-primary-600 hover:underline dark:text-primary-500"
  heading_classes = "text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white"
%>

<h1 class="<%= heading_classes %>"><%= heading %></h1>

<%= content %>

<form action="<%= url %>" method="<%= method == :get ? "get" : "post" %>" class="mt-6 space-y-6" <%= tag.attributes(html_options) %>>
  <% unless method == :get %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% end %>
  <% if method != :post && method != :get %>
    <input type="hidden" name="_method" value="<%= method %>">
  <% end %>

  <div>
    <label class="<%= label_classes %>">Your email</label>
    <% if form %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: input_classes %>
    <% else %>
      <input type="email" name="<%= resource_name ? "#{resource_name}[email]" : "email" %>" id="email" placeholder="name@company.com" autofocus autocomplete="email" class="<%= input_classes %>" required>
    <% end %>
  </div>

  <div>
    <label class="<%= label_classes %>">Password</label>
    <% if form %>
      <%= form.password_field :password, autocomplete: "current-password", placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", class: input_classes %>
    <% else %>
      <input type="password" name="<%= resource_name ? "#{resource_name}[password]" : "password" %>" id="password" placeholder="&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;" autocomplete="current-password" class="<%= input_classes %>" required>
    <% end %>
  </div>

  <% if remember_me || forgot_password_url %>
    <div class="flex items-center justify-between">
      <% if remember_me %>
        <div class="flex items-start">
          <div class="flex items-center h-5">
            <% if form %>
              <%= form.check_box :remember_me, class: checkbox_classes %>
            <% else %>
              <input type="checkbox" name="<%= resource_name ? "#{resource_name}[remember_me]" : "remember_me" %>" id="remember_me" class="<%= checkbox_classes %>">
            <% end %>
          </div>
          <div class="ms-3 text-sm">
            <label for="<%= form ? "#{form.object_name}_remember_me" : "remember_me" %>" class="text-gray-500 dark:text-gray-300">Remember me</label>
          </div>
        </div>
      <% end %>

      <% if forgot_password_url %>
        <a href="<%= forgot_password_url %>" class="text-sm <%= link_classes %>">Forgot password?</a>
      <% end %>
    </div>
  <% end %>

  <% if form %>
    <%= form.submit submit_text, class: submit_classes %>
  <% else %>
    <button type="submit" class="<%= submit_classes %>"><%= submit_text %></button>
  <% end %>
</form>

<%= social_buttons %>

<% if sign_up_url %>
  <p class="text-sm font-light text-gray-500 dark:text-gray-400">
    <%= sign_up_text %>
    <a href="<%= sign_up_url %>" class="<%= link_classes %>">Sign up</a>
  </p>
<% end %>
