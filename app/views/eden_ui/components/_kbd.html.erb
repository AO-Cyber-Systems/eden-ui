<%
  html_options ||= {}
  content ||= nil

  classes = ["px-2 py-1.5 text-xs font-semibold text-gray-800 bg-gray-100 border border-gray-200 rounded-lg dark:bg-gray-600 dark:text-gray-100 dark:border-gray-500", html_options.delete(:class)].compact_blank.join(" ")
%>

<kbd class="<%= classes %>" <%= tag.attributes(html_options) %>><%= content %></kbd>
