<%
  title ||= ""
  count ||= nil
  color ||= :default
  html_options ||= {}
  content ||= nil

  color_border = case color.to_sym
  when :primary then "border-t-primary-500"
  when :success then "border-t-green-500"
  when :warning then "border-t-yellow-500"
  when :danger then "border-t-red-500"
  else "border-t-zinc-400"
  end

  color_dot = case color.to_sym
  when :primary then "bg-primary-500"
  when :success then "bg-green-500"
  when :warning then "bg-yellow-500"
  when :danger then "bg-red-500"
  else "bg-zinc-400"
  end

  classes = [
    "w-80 flex-shrink-0 rounded-lg bg-zinc-50 dark:bg-zinc-800 p-4 border-t-4",
    color_border,
    html_options.delete(:class)
  ].compact_blank.join(" ")
%>

<div class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center gap-2">
      <span class="w-2.5 h-2.5 rounded-full <%= color_dot %>"></span>
      <h3 class="text-sm font-semibold text-zinc-900 dark:text-white"><%= title %></h3>
    </div>
    <% if count %>
      <span class="inline-flex items-center justify-center w-6 h-6 text-xs font-medium text-zinc-600 bg-zinc-200 rounded-full dark:bg-zinc-700 dark:text-zinc-300"><%= count %></span>
    <% end %>
  </div>

  <div class="min-h-[200px] space-y-3">
    <%= content %>
  </div>

  <button type="button" class="mt-3 flex w-full items-center justify-center rounded-lg border-2 border-dashed border-zinc-300 py-2.5 text-sm font-medium text-zinc-500 hover:border-zinc-400 hover:text-zinc-700 dark:border-zinc-600 dark:text-zinc-400 dark:hover:border-zinc-500 dark:hover:text-zinc-300">
    <svg class="w-4 h-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v12m6-6H6"/></svg>
    Add item
  </button>
</div>
