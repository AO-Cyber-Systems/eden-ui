<%
  title ||= "Trusted by"
  logos ||= []
  html_options ||= {}
  content ||= nil

  classes = ["bg-zinc-50 dark:bg-zinc-800", html_options.delete(:class)].compact_blank.join(" ")
%>

<section class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
    <% if title %>
      <p class="mb-8 text-sm font-semibold uppercase tracking-wider text-center text-zinc-400 dark:text-zinc-500"><%= title %></p>
    <% end %>

    <div class="flex flex-wrap items-center justify-center gap-8 lg:gap-16">
      <% logos.each do |logo| %>
        <% if logo[:href] %>
          <a href="<%= logo[:href] %>" class="flex items-center transition-opacity">
        <% else %>
          <div class="flex items-center">
        <% end %>

        <% if logo[:src] %>
          <img src="<%= logo[:src] %>" alt="<%= logo[:name] %>" class="h-8 grayscale opacity-50 hover:opacity-100 hover:grayscale-0 transition duration-300">
        <% else %>
          <span class="text-xl font-semibold text-zinc-400 hover:text-zinc-600 dark:text-zinc-500 dark:hover:text-zinc-300 transition duration-300"><%= logo[:name] %></span>
        <% end %>

        <% if logo[:href] %>
          </a>
        <% else %>
          </div>
        <% end %>
      <% end %>
    </div>

    <%= content %>
  </div>
</section>
