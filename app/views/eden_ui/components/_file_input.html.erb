<%
  name ||= nil
  id ||= name
  size ||= :md
  disabled ||= false
  required ||= false
  accept ||= nil
  multiple ||= false
  helper_text ||= nil
  html_options ||= {}
  content ||= nil

  size_classes = case size.to_sym
  when :sm then "text-xs"
  when :lg then "text-lg"
  else "text-sm"
  end

  classes = ["block w-full #{size_classes} text-zinc-900 border border-zinc-300 rounded-lg cursor-pointer bg-zinc-50 dark:text-zinc-400 focus:outline-none dark:bg-zinc-700 dark:border-zinc-600 dark:placeholder-zinc-400", html_options.delete(:class)].compact_blank.join(" ")
%>

<input type="file" <% if name %>name="<%= name %>"<% end %> <% if id %>id="<%= id %>"<% end %> class="<%= classes %>" <% if accept %>accept="<%= accept %>"<% end %> <%= "multiple" if multiple %> <%= "disabled" if disabled %> <%= "required" if required %> <%= tag.attributes(html_options) %>>
<% if helper_text %>
  <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-300"><%= helper_text %></p>
<% end %>
