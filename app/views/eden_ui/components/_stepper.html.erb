<%
  html_options ||= {}
  content ||= nil

  classes = ["flex items-center w-full text-sm font-medium text-center text-zinc-500 dark:text-zinc-400 sm:text-base", html_options.delete(:class)].compact_blank.join(" ")
%>

<ol class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <%= content %>
</ol>
