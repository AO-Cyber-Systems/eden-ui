<%
  html_options ||= {}
  content ||= nil

  classes = ["flex items-center w-full text-sm font-medium text-center text-gray-500 dark:text-gray-400 sm:text-base", html_options.delete(:class)].compact_blank.join(" ")
%>

<ol class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <%= content %>
</ol>
