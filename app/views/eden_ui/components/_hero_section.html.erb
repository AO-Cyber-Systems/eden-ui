<%
  title ||= nil
  subtitle ||= nil
  primary_cta_text ||= nil
  primary_cta_href ||= "#"
  secondary_cta_text ||= nil
  secondary_cta_href ||= "#"
  image ||= nil
  image_alt ||= ""
  variant ||= :centered
  badge_text ||= nil
  html_options ||= {}
  content ||= nil

  variant = variant.to_sym

  bg_classes = case variant
  when :gradient
    "bg-zinc-900"
  else
    "bg-white dark:bg-zinc-900"
  end

  title_color = case variant
  when :gradient
    "text-white"
  else
    "text-zinc-900 dark:text-white"
  end

  subtitle_color = case variant
  when :gradient
    "text-zinc-300"
  else
    "text-zinc-500 dark:text-zinc-400"
  end

  classes = [bg_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<section class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <% if variant == :gradient %>
    <div class="absolute inset-0 bg-gradient-to-br from-primary-600/20 via-purple-600/20 to-pink-600/20"></div>
  <% end %>
  <div class="<%= variant == :gradient ? 'relative' : '' %> py-8 px-4 mx-auto max-w-screen-xl lg:py-24 <%= variant == :split ? 'grid lg:grid-cols-12 lg:gap-8 xl:gap-0' : 'text-center' %>">
    <div class="<%= variant == :split ? 'mr-auto place-self-center lg:col-span-7' : '' %>">
      <% if badge_text %>
        <span class="inline-flex items-center mb-6 px-4 py-1.5 text-sm font-medium text-primary-700 bg-primary-100 rounded-full dark:bg-primary-900 dark:text-primary-300">
          <%= badge_text %>
        </span>
      <% end %>

      <% if title %>
        <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl <%= title_color %>"><%= title %></h1>
      <% end %>

      <% if subtitle %>
        <p class="mb-8 text-lg font-normal lg:text-xl <%= variant == :split ? '' : 'sm:px-16 lg:px-48' %> <%= subtitle_color %>"><%= subtitle %></p>
      <% end %>

      <% if primary_cta_text || secondary_cta_text %>
        <div class="flex flex-col sm:flex-row gap-4 <%= variant == :split ? '' : 'justify-center' %>">
          <% if primary_cta_text %>
            <%= eden_button(variant: :primary, size: :lg, href: primary_cta_href) { primary_cta_text } %>
          <% end %>
          <% if secondary_cta_text %>
            <%= eden_button(variant: :dark, size: :lg, outline: true, href: secondary_cta_href) { secondary_cta_text } %>
          <% end %>
        </div>
      <% end %>

      <%= content %>
    </div>

    <% if variant == :split && image %>
      <div class="hidden lg:mt-0 lg:col-span-5 lg:flex lg:items-center">
        <img src="<%= image %>" alt="<%= image_alt %>" class="rounded-lg shadow-xl">
      </div>
    <% end %>
  </div>
</section>
