<%
  id ||= "default-sidebar"
  position ||= :left
  collapsible ||= true
  html_options ||= {}
  content ||= nil

  position_class = position.to_sym == :right ? "right-0" : "left-0"
  classes = ["fixed top-0 #{position_class} z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0", html_options.delete(:class)].compact_blank.join(" ")
%>

<aside id="<%= id %>" class="<%= classes %>" aria-label="Sidebar" <%= tag.attributes(html_options) %>>
  <div class="h-full px-3 py-4 overflow-y-auto bg-zinc-50 dark:bg-zinc-800">
    <ul class="space-y-2 font-medium">
      <%= content %>
    </ul>
  </div>
</aside>
