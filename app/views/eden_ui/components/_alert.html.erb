<%
  variant ||= :info
  dismissible ||= false
  icon ||= true
  border ||= false
  rounded ||= true
  html_options ||= {}
  content ||= nil

  variant_classes = case variant.to_sym
  when :success
    border ? "text-green-800 border-t-4 border-green-300 bg-green-50 dark:text-green-400 dark:bg-zinc-800 dark:border-green-800" : "text-green-800 bg-green-50 dark:bg-zinc-800 dark:text-green-400"
  when :warning
    border ? "text-yellow-800 border-t-4 border-yellow-300 bg-yellow-50 dark:text-yellow-300 dark:bg-zinc-800 dark:border-yellow-800" : "text-yellow-800 bg-yellow-50 dark:bg-zinc-800 dark:text-yellow-300"
  when :danger
    border ? "text-red-800 border-t-4 border-red-300 bg-red-50 dark:text-red-400 dark:bg-zinc-800 dark:border-red-800" : "text-red-800 bg-red-50 dark:bg-zinc-800 dark:text-red-400"
  when :neutral
    border ? "text-zinc-800 border-t-4 border-zinc-300 bg-zinc-50 dark:text-zinc-300 dark:bg-zinc-800 dark:border-zinc-600" : "text-zinc-800 bg-zinc-50 dark:bg-zinc-800 dark:text-zinc-300"
  else
    border ? "text-primary-800 border-t-4 border-primary-300 bg-primary-50 dark:text-primary-400 dark:bg-zinc-800 dark:border-primary-800" : "text-primary-800 bg-primary-50 dark:bg-zinc-800 dark:text-primary-400"
  end

  icon_color = case variant.to_sym
  when :success then "text-green-800 dark:text-green-400"
  when :warning then "text-yellow-800 dark:text-yellow-300"
  when :danger then "text-red-800 dark:text-red-400"
  when :neutral then "text-zinc-800 dark:text-zinc-300"
  else "text-primary-800 dark:text-primary-400"
  end

  rounded_class = rounded ? "rounded-lg" : ""
  classes = ["flex items-center p-4 mb-4 text-sm #{rounded_class}", variant_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<div class="<%= classes %>" role="alert" <%= tag.attributes(html_options) %>>
  <% if icon %>
    <svg class="shrink-0 inline w-4 h-4 me-3 <%= icon_color %>" fill="currentColor" viewBox="0 0 20 20"><path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/></svg>
  <% end %>
  <div><%= content %></div>
  <% if dismissible %>
    <button type="button" class="ms-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex items-center justify-center h-8 w-8 <%= variant_classes %>" data-dismiss-target="#alert" aria-label="Close">
      <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
    </button>
  <% end %>
</div>
