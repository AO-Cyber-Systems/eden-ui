<%
  code ||= "404"
  title ||= "Page not found"
  description ||= "Sorry, we can't find that page."
  back_href ||= "/"
  back_text ||= "Go back home"
  support_href ||= nil
  support_text ||= "Contact support"
  html_options ||= {}
  content ||= nil

  classes = [
    "flex min-h-[60vh] flex-col items-center justify-center px-4 py-8 text-center",
    html_options.delete(:class)
  ].compact_blank.join(" ")
%>

<div class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <h1 class="mb-4 text-7xl font-extrabold tracking-tight text-primary-600 dark:text-primary-500"><%= code %></h1>
  <p class="mb-4 text-3xl font-bold tracking-tight text-zinc-900 dark:text-white md:text-4xl"><%= title %></p>
  <p class="mb-6 text-lg text-zinc-500 dark:text-zinc-400 max-w-md"><%= description %></p>

  <div class="flex flex-wrap items-center justify-center gap-3">
    <%= eden_button(variant: :primary, href: back_href) { back_text } %>

    <% if support_href %>
      <a href="<%= support_href %>" class="inline-flex items-center text-sm font-medium text-primary-600 hover:underline dark:text-primary-500">
        <%= support_text %>
        <svg class="ml-1 h-4 w-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5m14 0-4 4m4-4-4-4"/>
        </svg>
      </a>
    <% end %>
  </div>

  <% if content %>
    <div class="mt-8 w-full max-w-lg">
      <%= content %>
    </div>
  <% end %>
</div>
