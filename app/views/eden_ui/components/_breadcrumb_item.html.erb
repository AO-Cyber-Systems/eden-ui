<%
  href ||= nil
  label ||= nil
  icon ||= nil
  current ||= false
  html_options ||= {}
  content ||= nil

  display_text = label || content
%>

<li class="inline-flex items-center">
  <% if current %>
    <div class="flex items-center">
      <svg class="w-3 h-3 mx-1 text-gray-400 rtl:rotate-180" fill="none" viewBox="0 0 6 10"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/></svg>
      <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400"><%= display_text %></span>
    </div>
  <% elsif href %>
    <div class="flex items-center">
      <svg class="w-3 h-3 mx-1 text-gray-400 rtl:rotate-180" fill="none" viewBox="0 0 6 10"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/></svg>
      <a href="<%= href %>" class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2 dark:text-gray-400 dark:hover:text-white" <%= tag.attributes(html_options) %>><%= display_text %></a>
    </div>
  <% else %>
    <div class="flex items-center">
      <% if icon %>
        <svg class="w-3 h-3 me-2.5" fill="currentColor" viewBox="0 0 20 20"><%= icon.html_safe %></svg>
      <% end %>
      <a href="#" class="text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white" <%= tag.attributes(html_options) %>><%= display_text %></a>
    </div>
  <% end %>
</li>
