<%
  title ||= nil
  body ||= nil
  placement ||= :top
  id ||= "popover"
  html_options ||= {}
  content ||= nil
%>

<div data-controller="eden-popover" data-eden-popover-placement-value="<%= placement %>" class="relative inline-block" <%= tag.attributes(html_options) %>>
  <div data-action="mouseenter->eden-popover#show mouseleave->eden-popover#hide">
    <%= content %>
  </div>
  <div data-eden-popover-target="popover" role="tooltip" class="absolute z-10 invisible inline-block w-64 text-sm text-gray-500 transition-opacity duration-300 bg-white border border-gray-200 rounded-lg shadow-sm opacity-0 dark:text-gray-400 dark:border-gray-600 dark:bg-gray-800">
    <% if title %>
      <div class="px-3 py-2 bg-gray-100 border-b border-gray-200 rounded-t-lg dark:border-gray-600 dark:bg-gray-700">
        <h3 class="font-semibold text-gray-900 dark:text-white"><%= title %></h3>
      </div>
    <% end %>
    <div class="px-3 py-2">
      <p><%= body %></p>
    </div>
    <div data-popper-arrow></div>
  </div>
</div>
