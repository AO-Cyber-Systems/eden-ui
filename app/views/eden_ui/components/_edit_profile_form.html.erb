<%
  url ||= "#"
  method ||= :put
  heading ||= "Edit profile"
  form ||= nil
  name_field = local_assigns.fetch(:name_field, true)
  password_hint ||= nil
  cancel_url ||= nil
  delete_url ||= nil
  delete_confirm ||= "Are you sure you want to delete your account? This cannot be undone."
  submit_text ||= "Update profile"
  html_options ||= {}
  content ||= nil

  input_classes = "bg-zinc-50 border border-zinc-300 text-zinc-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-zinc-700 dark:border-zinc-600 dark:placeholder-zinc-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
  label_classes = "block mb-2 text-sm font-medium text-zinc-900 dark:text-white"
  submit_classes = "text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 cursor-pointer"
  heading_classes = "text-xl font-bold leading-tight tracking-tight text-zinc-900 md:text-2xl dark:text-white"
%>

<h1 class="<%= heading_classes %>"><%= heading %></h1>

<%= content %>

<form action="<%= url %>" method="post" class="mt-6 space-y-6" <%= tag.attributes(html_options) %>>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="<%= method %>">

  <% if name_field %>
    <div>
      <label class="<%= label_classes %>">Your name</label>
      <% if form %>
        <%= form.text_field :name, autofocus: true, autocomplete: "name", class: input_classes %>
      <% else %>
        <input type="text" name="name" id="name" autofocus autocomplete="name" class="<%= input_classes %>">
      <% end %>
    </div>
  <% end %>

  <div>
    <label class="<%= label_classes %>">Your email</label>
    <% if form %>
      <%= form.email_field :email, autocomplete: "email", class: input_classes %>
    <% else %>
      <input type="email" name="email" id="email" autocomplete="email" class="<%= input_classes %>" required>
    <% end %>
  </div>

  <div>
    <label class="<%= label_classes %>">New password</label>
    <% if form %>
      <%= form.password_field :password, autocomplete: "new-password", placeholder: "Leave blank if you don't want to change it", class: input_classes %>
    <% else %>
      <input type="password" name="password" id="password" placeholder="Leave blank if you don't want to change it" autocomplete="new-password" class="<%= input_classes %>">
    <% end %>
    <% if password_hint %>
      <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400"><%= password_hint %></p>
    <% end %>
  </div>

  <div>
    <label class="<%= label_classes %>">Confirm new password</label>
    <% if form %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: input_classes %>
    <% else %>
      <input type="password" name="password_confirmation" id="password_confirmation" autocomplete="new-password" class="<%= input_classes %>">
    <% end %>
  </div>

  <div>
    <label class="<%= label_classes %>">Current password</label>
    <% if form %>
      <%= form.password_field :current_password, autocomplete: "current-password", placeholder: "Required to confirm changes", class: input_classes %>
    <% else %>
      <input type="password" name="current_password" id="current_password" placeholder="Required to confirm changes" autocomplete="current-password" class="<%= input_classes %>" required>
    <% end %>
  </div>

  <div class="flex items-center justify-between">
    <% if form %>
      <%= form.submit submit_text, class: submit_classes %>
    <% else %>
      <button type="submit" class="<%= submit_classes %>"><%= submit_text %></button>
    <% end %>

    <% if cancel_url %>
      <a href="<%= cancel_url %>" class="text-sm font-medium text-zinc-500 hover:underline dark:text-zinc-400">Back</a>
    <% end %>
  </div>
</form>

<% if delete_url %>
  <hr class="border-zinc-200 dark:border-zinc-700">

  <div>
    <h3 class="text-sm font-medium text-red-600 dark:text-red-400">Cancel my account</h3>
    <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400">Unhappy? This will permanently delete your account.</p>
    <%= button_to "Delete account", delete_url, method: :delete, class: "mt-3 text-red-600 hover:text-white border border-red-600 hover:bg-red-600 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-xs px-4 py-2 text-center dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600 dark:focus:ring-red-900 cursor-pointer", data: { turbo_confirm: delete_confirm } %>
  </div>
<% end %>
