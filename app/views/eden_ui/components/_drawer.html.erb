<%
  id ||= "drawer"
  position ||= :left
  title ||= nil
  backdrop ||= true
  closeable ||= true
  html_options ||= {}
  content ||= nil

  position_classes = case position.to_sym
  when :right
    "fixed top-0 right-0 z-40 h-screen w-80 transition-transform translate-x-full"
  when :top
    "fixed top-0 left-0 right-0 z-40 w-full transition-transform -translate-y-full"
  when :bottom
    "fixed bottom-0 left-0 right-0 z-40 w-full transition-transform translate-y-full"
  else
    "fixed top-0 left-0 z-40 h-screen w-80 transition-transform -translate-x-full"
  end

  classes = ["p-4 overflow-y-auto bg-white dark:bg-zinc-800", position_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<div id="<%= id %>" data-controller="eden-drawer" data-eden-drawer-position-value="<%= position %>" class="<%= classes %>" tabindex="-1" aria-labelledby="<%= id %>-label" <%= tag.attributes(html_options) %>>
  <% if title || closeable %>
    <div class="flex items-center justify-between mb-4">
      <% if title %>
        <h5 id="<%= id %>-label" class="text-base font-semibold text-zinc-500 dark:text-zinc-400"><%= title %></h5>
      <% end %>
      <% if closeable %>
        <button type="button" data-action="eden-drawer#close" class="text-zinc-400 bg-transparent hover:bg-zinc-200 hover:text-zinc-900 rounded-lg text-sm w-8 h-8 inline-flex items-center justify-center dark:hover:bg-zinc-600 dark:hover:text-white">
          <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
        </button>
      <% end %>
    </div>
  <% end %>
  <%= content %>
</div>

<% if backdrop %>
  <div data-eden-drawer-target="backdrop" class="hidden bg-zinc-900/50 dark:bg-zinc-900/80 fixed inset-0 z-30"></div>
<% end %>
