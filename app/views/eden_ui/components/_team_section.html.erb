  subtitle ||= nil
  members ||= []
  columns ||= 4
  html_options ||= {}
  content ||= nil

  col_class = case columns
  when 2 then "sm:grid-cols-2"
  when 3 then "sm:grid-cols-2 lg:grid-cols-3"
  else "sm:grid-cols-2 lg:grid-cols-4"
  end

