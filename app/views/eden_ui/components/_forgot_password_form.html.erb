<%
  url ||= "#"
  method ||= :post
  heading ||= "Forgot your password?"
  description ||= "No worries, we'll send you reset instructions."
  form ||= nil
  sign_in_url ||= nil
  submit_text ||= "Send reset instructions"
  html_options ||= {}
  content ||= nil

  input_classes = "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
  label_classes = "block mb-2 text-sm font-medium text-gray-900 dark:text-white"
  submit_classes = "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 cursor-pointer"
  link_classes = "font-medium text-primary-600 hover:underline dark:text-primary-500"
  heading_classes = "text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white"
%>

<h1 class="<%= heading_classes %>"><%= heading %></h1>
<% if description.present? %>
  <p class="mt-2 text-sm text-gray-500 dark:text-gray-400"><%= description %></p>
<% end %>

<%= content %>

<form action="<%= url %>" method="<%= method == :get ? "get" : "post" %>" class="mt-6 space-y-6" <%= tag.attributes(html_options) %>>
  <% unless method == :get %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% end %>
  <% if method != :post && method != :get %>
    <input type="hidden" name="_method" value="<%= method %>">
  <% end %>

  <div>
    <label class="<%= label_classes %>">Your email</label>
    <% if form %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@company.com", class: input_classes %>
    <% else %>
      <input type="email" name="email" id="email" placeholder="name@company.com" autofocus autocomplete="email" class="<%= input_classes %>" required>
    <% end %>
  </div>

  <% if form %>
    <%= form.submit submit_text, class: submit_classes %>
  <% else %>
    <button type="submit" class="<%= submit_classes %>"><%= submit_text %></button>
  <% end %>
</form>

<% if sign_in_url %>
  <p class="text-sm font-light text-gray-500 dark:text-gray-400">
    Remember your password?
    <a href="<%= sign_in_url %>" class="<%= link_classes %>">Sign in</a>
  </p>
<% end %>
