<%
  label ||= nil
  href ||= nil
  active ||= false
  disabled ||= false
  icon ||= nil
  html_options ||= {}
  content ||= nil

  base = "w-full px-4 py-2 border-b border-zinc-200 dark:border-zinc-600 last:border-b-0 first:rounded-t-lg last:rounded-b-lg"
  base += icon ? " flex items-center gap-2" : " block"

  if active
    state_classes = "text-white bg-primary-700 cursor-pointer dark:bg-primary-600"
  elsif disabled
    state_classes = "text-zinc-400 bg-zinc-100 cursor-not-allowed dark:bg-zinc-600 dark:text-zinc-500"
  else
    state_classes = "text-zinc-900 bg-white hover:bg-zinc-100 hover:text-primary-700 cursor-pointer dark:bg-zinc-700 dark:text-white dark:hover:bg-zinc-600 dark:hover:text-white"
  end

  classes = [base, state_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<li>
  <% if href && !disabled %>
    <a href="<%= href %>" class="<%= classes %>" <%= tag.attributes(html_options) %>>
      <% if content %>
        <%= content %>
      <% else %>
        <% if icon %><%= eden_icon(icon, size: :sm) %><% end %>
        <%= label %>
      <% end %>
    </a>
  <% else %>
    <span class="<%= classes %>" <%= tag.attributes(html_options) %>>
      <% if content %>
        <%= content %>
      <% else %>
        <% if icon %><%= eden_icon(icon, size: :sm) %><% end %>
        <%= label %>
      <% end %>
    </span>
  <% end %>
</li>
