  <% end %>
<% else %>
  <button type="<%= type %>" class="<%= classes %>" <%= "disabled" if disabled %> <%= tag.attributes(html_options) %>>
    <% if icon %><%= eden_icon(icon, class: "w-4 h-4 me-2") %><% end %>
