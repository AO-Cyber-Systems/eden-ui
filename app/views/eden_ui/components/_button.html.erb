<%
  variant ||= :primary
  size ||= :md
  outline ||= false
  pill ||= false
  type ||= :button
  href ||= nil
  disabled ||= false
  icon ||= nil
  loading ||= false
  html_options ||= {}
  content ||= nil

  base_classes = "inline-flex items-center justify-center font-medium focus:ring-4 focus:outline-none transition-colors"

  size_classes = case size.to_sym
  when :xs then "px-3 py-2 text-xs"
  when :sm then "px-3 py-2 text-sm"
  when :lg then "px-5 py-3 text-base"
  when :xl then "px-6 py-3.5 text-base"
  else "px-5 py-2.5 text-sm"
  end

  variant_classes = if outline
    case variant.to_sym
    when :secondary
      "text-zinc-900 border border-zinc-300 hover:bg-zinc-100 focus:ring-zinc-200 dark:text-white dark:border-zinc-600 dark:hover:bg-zinc-700 dark:focus:ring-zinc-700"
    when :danger
      "text-red-700 border border-red-700 hover:bg-red-800 hover:text-white focus:ring-red-300 dark:text-red-500 dark:border-red-500 dark:hover:bg-red-600 dark:hover:text-white dark:focus:ring-red-900"
    when :success
      "text-green-700 border border-green-700 hover:bg-green-800 hover:text-white focus:ring-green-300 dark:text-green-500 dark:border-green-500 dark:hover:bg-green-600 dark:hover:text-white dark:focus:ring-green-800"
    when :warning
      "text-yellow-400 border border-yellow-400 hover:bg-yellow-500 hover:text-white focus:ring-yellow-300 dark:text-yellow-300 dark:border-yellow-300 dark:hover:bg-yellow-400 dark:hover:text-white dark:focus:ring-yellow-900"
    when :dark
      "text-zinc-900 border border-zinc-800 hover:bg-zinc-900 hover:text-white focus:ring-zinc-300 dark:text-zinc-400 dark:border-zinc-600 dark:hover:bg-zinc-600 dark:hover:text-white dark:focus:ring-zinc-800"
    when :ghost
      "text-primary-700 border-0 hover:bg-primary-50 focus:ring-primary-300 dark:text-primary-400 dark:hover:bg-zinc-700 dark:focus:ring-primary-800"
    else
      "text-primary-700 border border-primary-700 hover:bg-primary-800 hover:text-white focus:ring-primary-300 dark:text-primary-500 dark:border-primary-500 dark:hover:bg-primary-600 dark:hover:text-white dark:focus:ring-primary-800"
    end
  else
    case variant.to_sym
    when :secondary
      "text-zinc-900 bg-white border border-zinc-300 hover:bg-zinc-100 focus:ring-zinc-200 dark:bg-zinc-800 dark:text-white dark:border-zinc-600 dark:hover:bg-zinc-700 dark:focus:ring-zinc-700"
    when :danger
      "text-white bg-red-700 hover:bg-red-800 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900"
    when :success
      "text-white bg-green-700 hover:bg-green-800 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800"
    when :warning
      "text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-300 dark:focus:ring-yellow-900"
    when :dark
      "text-white bg-zinc-800 hover:bg-zinc-900 focus:ring-zinc-300 dark:bg-zinc-800 dark:hover:bg-zinc-700 dark:focus:ring-zinc-700 dark:border-zinc-700"
    when :ghost
      "text-primary-700 bg-transparent hover:bg-primary-50 focus:ring-primary-300 dark:text-primary-400 dark:hover:bg-zinc-700 dark:focus:ring-primary-800"
    else
      "text-white bg-primary-600 hover:bg-primary-700 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
    end
  end

  disabled_classes = disabled ? "opacity-50 cursor-not-allowed" : ""
  rounded = pill ? "rounded-full" : "rounded-lg"
  classes = [base_classes, size_classes, variant_classes, rounded, disabled_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<% if href %>
  <%= link_to href, class: classes, **html_options do %>
    <% if icon %><%= eden_icon(icon, class: "w-4 h-4 me-2") %><% end %>
