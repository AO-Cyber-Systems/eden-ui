<%
  id ||= "modal"
  size ||= :md
  closeable ||= true
  static ||= false
  title ||= nil
  html_options ||= {}
  content ||= nil

  size_classes = case size.to_sym
  when :sm then "max-w-md"
  when :lg then "max-w-4xl"
  when :xl then "max-w-7xl"
  else "max-w-2xl"
  end
%>

<div id="<%= id %>" data-controller="eden-modal" <% if static %>data-eden-modal-static-value="true"<% end %> tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full" <%= tag.attributes(html_options) %>>
  <div class="relative p-4 w-full <%= size_classes %> max-h-full">
    <div class="relative bg-white rounded-lg shadow-sm dark:bg-zinc-700">
      <% if title || closeable %>
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-zinc-600">
          <% if title %>
            <h3 class="text-xl font-semibold text-zinc-900 dark:text-white"><%= title %></h3>
          <% end %>
          <% if closeable %>
            <button type="button" data-action="eden-modal#close" class="text-zinc-400 bg-transparent hover:bg-zinc-200 hover:text-zinc-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-zinc-600 dark:hover:text-white">
              <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
            </button>
          <% end %>
        </div>
      <% end %>
      <div class="p-4 md:p-5">
        <%= content %>
      </div>
    </div>
  </div>
</div>
