<%
  columns ||= []
  html_options ||= {}
  content ||= nil

  classes = ["text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400", html_options.delete(:class)].compact_blank.join(" ")
%>

<thead class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <tr>
    <% if columns.any? %>
      <% columns.each do |col| %>
        <th scope="col" class="px-6 py-3"><%= col %></th>
      <% end %>
    <% else %>
      <%= content %>
    <% end %>
  </tr>
</thead>
