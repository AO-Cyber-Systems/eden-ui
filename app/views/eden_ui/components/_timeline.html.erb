<%
  horizontal ||= false
  html_options ||= {}
  content ||= nil

  if horizontal
    classes = ["flex items-center", html_options.delete(:class)].compact_blank.join(" ")
  else
    classes = ["relative border-s border-zinc-200 dark:border-zinc-700", html_options.delete(:class)].compact_blank.join(" ")
  end
%>

<ol class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <%= content %>
</ol>
