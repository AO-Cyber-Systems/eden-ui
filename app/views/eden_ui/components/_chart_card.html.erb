<%
  title ||= nil
  subtitle ||= nil
  value ||= nil
  chart_id ||= nil
  html_options ||= {}
  content ||= nil

  classes = [
    "bg-white rounded-lg shadow-sm dark:bg-zinc-800 p-4 md:p-6",
    html_options.delete(:class)
  ].compact_blank.join(" ")
%>

<div class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <div class="flex items-start justify-between mb-4">
    <div>
      <% if title %>
        <h3 class="text-base font-semibold text-zinc-900 dark:text-white"><%= title %></h3>
      <% end %>
      <% if subtitle %>
        <p class="mt-0.5 text-sm text-zinc-500 dark:text-zinc-400"><%= subtitle %></p>
      <% end %>
    </div>
    <% if value %>
      <span class="text-2xl font-bold leading-none text-zinc-900 dark:text-white"><%= value %></span>
    <% end %>
  </div>

  <% if chart_id %>
    <div id="<%= chart_id %>" class="w-full"></div>
  <% end %>

  <% if content %>
    <div class="flex items-center justify-between border-t border-zinc-200 pt-4 dark:border-zinc-700 mt-4">
      <%= content %>
    </div>
  <% end %>
</div>
