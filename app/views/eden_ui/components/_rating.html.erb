<%
  value ||= 0
  max ||= 5
  size ||= :md
  review_count ||= nil
  review_text ||= nil
  html_options ||= {}
  content ||= nil

  size_classes = case size.to_sym
  when :sm then "w-4 h-4"
  when :lg then "w-7 h-7"
  else "w-5 h-5"
  end

  classes = ["flex items-center", html_options.delete(:class)].compact_blank.join(" ")
%>

<div class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <% max.times do |i| %>
    <% if i < value.to_i %>
      <svg class="<%= size_classes %> text-yellow-300 me-1" fill="currentColor" viewBox="0 0 22 20"><path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/></svg>
    <% elsif i < value.to_f %>
      <svg class="<%= size_classes %> text-yellow-300 me-1" fill="currentColor" viewBox="0 0 22 20"><defs><linearGradient id="half-<%= i %>"><stop offset="50%" stop-color="currentColor"/><stop offset="50%" stop-color="#D1D5DB"/></linearGradient></defs><path fill="url(#half-<%= i %>)" d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/></svg>
    <% else %>
      <svg class="<%= size_classes %> text-gray-300 dark:text-gray-500 me-1" fill="currentColor" viewBox="0 0 22 20"><path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/></svg>
    <% end %>
  <% end %>
  <% if review_text %>
    <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400"><%= review_text %></p>
  <% elsif review_count %>
    <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400"><%= value %> out of <%= max %> (<%= review_count %>)</p>
  <% end %>
</div>
