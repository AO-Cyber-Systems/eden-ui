<%
  logo ||= nil
  logo_href ||= "/"
  app_name ||= nil
  fixed ||= false
  bordered ||= false
  rounded ||= false
  html_options ||= {}
  content ||= nil

  fixed_classes = fixed ? "fixed w-full z-20 top-0 start-0" : ""
  border_classes = bordered ? "border-b border-gray-200 dark:border-gray-700" : ""
  rounded_classes = rounded ? "rounded-lg" : ""

  classes = ["bg-white dark:bg-gray-900", fixed_classes, border_classes, rounded_classes, html_options.delete(:class)].compact_blank.join(" ")
%>

<nav class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="<%= logo_href %>" class="flex items-center space-x-3 rtl:space-x-reverse">
      <% if logo %>
        <%= image_tag logo, class: "h-8", alt: app_name || "Logo" %>
      <% end %>
      <% if app_name %>
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"><%= app_name %></span>
      <% end %>
    </a>

    <button data-collapse-toggle="navbar-default" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-default" aria-expanded="false">
      <span class="sr-only">Open main menu</span>
      <svg class="w-5 h-5" fill="none" viewBox="0 0 17 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/></svg>
    </button>

    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <%= content %>
    </div>
  </div>
</nav>
