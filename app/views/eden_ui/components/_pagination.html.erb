<%
  current_page ||= 1
  total_pages ||= 1
  path_prefix ||= "?"
  previous_label ||= "Previous"
  next_label ||= "Next"
  html_options ||= {}
  content ||= nil

  classes = ["flex", html_options.delete(:class)].compact_blank.join(" ")
%>

<nav aria-label="Page navigation" class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <ul class="inline-flex -space-x-px text-sm">
    <li>
      <% if current_page > 1 %>
        <a href="<%= "#{path_prefix}page=#{current_page - 1}" %>" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><%= previous_label %></a>
      <% else %>
        <span class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-300 bg-white border border-e-0 border-gray-300 rounded-s-lg cursor-not-allowed dark:bg-gray-800 dark:border-gray-700 dark:text-gray-600"><%= previous_label %></span>
      <% end %>
    </li>
    <% (1..total_pages).each do |page| %>
      <li>
        <% if page == current_page %>
          <span aria-current="page" class="flex items-center justify-center px-3 h-8 text-blue-600 border border-gray-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 dark:border-gray-700 dark:bg-gray-700 dark:text-white"><%= page %></span>
        <% else %>
          <a href="<%= "#{path_prefix}page=#{page}" %>" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><%= page %></a>
        <% end %>
      </li>
    <% end %>
    <li>
      <% if current_page < total_pages %>
        <a href="<%= "#{path_prefix}page=#{current_page + 1}" %>" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white"><%= next_label %></a>
      <% else %>
        <span class="flex items-center justify-center px-3 h-8 leading-tight text-gray-300 bg-white border border-gray-300 rounded-e-lg cursor-not-allowed dark:bg-gray-800 dark:border-gray-700 dark:text-gray-600"><%= next_label %></span>
      <% end %>
    </li>
  </ul>
</nav>
