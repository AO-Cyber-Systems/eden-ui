<%
  title ||= nil
  completed ||= false
  active ||= false
  icon ||= nil
  last ||= false
  html_options ||= {}
  content ||= nil

  display_text = title || content

  state_classes = if completed
    "text-primary-600 dark:text-primary-500"
  elsif active
    "text-primary-600 dark:text-primary-500"
  else
    "text-zinc-500 dark:text-zinc-400"
  end

  line_class = last ? "" : "after:content-[''] after:w-full after:h-1 after:border-b after:border-zinc-200 after:border-1 after:hidden sm:after:inline-block after:mx-6 xl:after:mx-10 dark:after:border-zinc-700"
%>

<li class="flex md:w-full items-center <%= state_classes %> sm:after:content-[''] <%= line_class %>" <%= tag.attributes(html_options) %>>
  <span class="flex items-center after:content-['/'] sm:after:hidden after:mx-2 after:text-zinc-200 dark:after:text-zinc-500">
    <% if completed %>
      <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 me-2.5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z"/></svg>
    <% else %>
      <span class="me-2"><%= icon %></span>
    <% end %>
    <span class="whitespace-nowrap"><%= display_text %></span>
  </span>
</li>
