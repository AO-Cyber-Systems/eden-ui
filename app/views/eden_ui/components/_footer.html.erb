<%
  variant ||= :default
  logo ||= nil
  logo_href ||= "/"
  app_name ||= nil
  copyright ||= nil
  html_options ||= {}
  content ||= nil

  bg_class = case variant.to_sym
  when :dark
    "bg-zinc-900"
  when :bordered
    "bg-white border-t border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700"
  else
    "bg-white dark:bg-zinc-900"
  end

  text_class = variant.to_sym == :dark ? "text-zinc-400" : "text-zinc-500 dark:text-zinc-400"
  classes = [bg_class, html_options.delete(:class)].compact_blank.join(" ")
%>

<footer class="<%= classes %>" <%= tag.attributes(html_options) %>>
  <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
    <% if logo || app_name %>
      <div class="sm:flex sm:items-center sm:justify-between">
        <a href="<%= logo_href %>" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse">
          <% if logo %>
            <img src="<%= logo %>" class="h-8" alt="<%= app_name || "Logo" %>">
          <% end %>
          <% if app_name %>
            <span class="self-center text-2xl font-semibold whitespace-nowrap <%= variant.to_sym == :dark ? "text-white" : "dark:text-white" %>"><%= app_name %></span>
          <% end %>
        </a>
      </div>
    <% end %>

    <%= content %>

    <% if copyright %>
      <hr class="my-6 border-zinc-200 sm:mx-auto dark:border-zinc-700 lg:my-8">
      <span class="block text-sm <%= text_class %> sm:text-center"><%= copyright %></span>
    <% end %>
  </div>
</footer>
