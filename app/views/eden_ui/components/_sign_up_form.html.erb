<%
  url ||= "#"
  method ||= :post
  heading ||= "Create an account"
  form ||= nil
  name_field = local_assigns.fetch(:name_field, true)
  confirm_password = local_assigns.fetch(:confirm_password, true)
  password_hint ||= nil
  terms_url ||= nil
  sign_in_url ||= nil
  sign_in_text ||= "Already have an account?"
  submit_text ||= "Create account"
  social_buttons ||= nil
  html_options ||= {}
  content ||= nil

  input_classes = "bg-zinc-50 border border-zinc-300 text-zinc-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-zinc-700 dark:border-zinc-600 dark:placeholder-zinc-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
  label_classes = "block mb-2 text-sm font-medium text-zinc-900 dark:text-white"
  checkbox_classes = "w-4 h-4 border border-zinc-300 rounded bg-zinc-50 focus:ring-3 focus:ring-primary-300 dark:bg-zinc-700 dark:border-zinc-600 dark:focus:ring-primary-600 dark:ring-offset-zinc-800"
  submit_classes = "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 cursor-pointer"
  link_classes = "font-medium text-primary-600 hover:underline dark:text-primary-500"
  heading_classes = "text-xl font-bold leading-tight tracking-tight text-zinc-900 md:text-2xl dark:text-white"
%>

<h1 class="<%= heading_classes %>"><%= heading %></h1>

<%= content %>

<form action="<%= url %>" method="<%= method == :get ? "get" : "post" %>" class="mt-6 space-y-6" <%= tag.attributes(html_options) %>>
  <% unless method == :get %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% end %>
  <% if method != :post && method != :get %>
    <input type="hidden" name="_method" value="<%= method %>">
  <% end %>

  <% if name_field %>
    <div>
      <label class="<%= label_classes %>">Your name</label>
      <% if form %>
        <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "John Doe", class: input_classes %>
      <% else %>
        <input type="text" name="name" id="name" placeholder="John Doe" autofocus autocomplete="name" class="<%= input_classes %>">
      <% end %>
    </div>
  <% end %>

  <div>
    <label class="<%= label_classes %>">Your email</label>
    <% if form %>
      <%= form.email_field :email, autocomplete: "email", placeholder: "name@company.com", class: input_classes %>
    <% else %>
      <input type="email" name="email" id="email" placeholder="name@company.com" autocomplete="email" class="<%= input_classes %>" required>
    <% end %>
  </div>

  <div>
    <label class="<%= label_classes %>">Password</label>
    <% if form %>
      <%= form.password_field :password, autocomplete: "new-password", placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", class: input_classes %>
    <% else %>
      <input type="password" name="password" id="password" placeholder="&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;" autocomplete="new-password" class="<%= input_classes %>" required>
    <% end %>
    <% if password_hint %>
      <p class="mt-1 text-xs text-zinc-500 dark:text-zinc-400"><%= password_hint %></p>
    <% end %>
  </div>

  <% if confirm_password %>
    <div>
      <label class="<%= label_classes %>">Confirm password</label>
      <% if form %>
        <%= form.password_field :password_confirmation, autocomplete: "new-password", placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", class: input_classes %>
      <% else %>
        <input type="password" name="password_confirmation" id="password_confirmation" placeholder="&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;&#x2022;" autocomplete="new-password" class="<%= input_classes %>" required>
      <% end %>
    </div>
  <% end %>

  <% if terms_url %>
    <div class="flex items-start">
      <div class="flex items-center h-5">
        <input type="checkbox" name="terms" id="terms" required class="<%= checkbox_classes %>">
      </div>
      <div class="ms-3 text-sm">
        <label for="terms" class="font-light text-zinc-500 dark:text-zinc-300">
          I accept the
          <a href="<%= terms_url %>" class="<%= link_classes %>">Terms and Conditions</a>
        </label>
      </div>
    </div>
  <% end %>

  <% if form %>
    <%= form.submit submit_text, class: submit_classes %>
  <% else %>
    <button type="submit" class="<%= submit_classes %>"><%= submit_text %></button>
  <% end %>
</form>

<%= social_buttons %>

<% if sign_in_url %>
  <p class="text-sm font-light text-zinc-500 dark:text-zinc-400">
    <%= sign_in_text %>
    <a href="<%= sign_in_url %>" class="<%= link_classes %>">Sign in</a>
  </p>
<% end %>
