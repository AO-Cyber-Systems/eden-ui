<%# locals: (conversations: [], current_conversation: nil, app_name: EdenUi.configuration.app_name, logo_path: EdenUi.configuration.logo_path) %>

<aside class="flex h-full w-80 flex-col border-r border-gray-200 bg-gray-50 dark:border-gray-700 dark:bg-gray-800" data-controller="eden-sidebar">
  <div class="flex items-center justify-between border-b border-gray-200 p-4 dark:border-gray-700">
    <div class="flex items-center">
      <% if logo_path.present? %>
        <%= image_tag logo_path, alt: app_name, class: "me-2 h-6" %>
      <% end %>
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white"><%= app_name %></h2>
    </div>
    <button type="button" class="rounded-lg p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-900 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
      <span class="sr-only">New conversation</span>
      <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 5.757v8.486M5.757 10h8.486M19 10a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
      </svg>
    </button>
  </div>

  <div class="p-4">
    <label for="chat-search" class="sr-only">Search conversations</label>
    <div class="relative">
      <div class="pointer-events-none absolute inset-y-0 start-0 flex items-center ps-3">
        <svg class="h-4 w-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
        </svg>
      </div>
      <input type="text" id="chat-search" class="block w-full rounded-lg border border-gray-300 bg-white p-2.5 ps-10 text-sm text-gray-900 focus:border-primary-500 focus:ring-primary-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-500" placeholder="Search conversations...">
    </div>
  </div>

  <div class="flex-1 overflow-y-auto">
    <ul class="space-y-1 px-3">
      <% conversations.each do |conversation| %>
        <% is_active = current_conversation.present? && conversation.respond_to?(:id) && current_conversation.respond_to?(:id) && conversation.id == current_conversation.id %>
        <li>
          <a href="<%= conversation.respond_to?(:path) ? conversation.path : '#' %>" class="<%= is_active ? 'bg-gray-200 dark:bg-gray-700' : 'hover:bg-gray-100 dark:hover:bg-gray-700' %> flex items-center rounded-lg p-3 text-gray-900 dark:text-white">
            <div class="min-w-0 flex-1">
              <p class="truncate text-sm font-medium">
                <%= conversation.respond_to?(:title) ? conversation.title : "Conversation" %>
              </p>
              <% if conversation.respond_to?(:last_message) && conversation.last_message.present? %>
                <p class="truncate text-xs text-gray-500 dark:text-gray-400">
                  <%= conversation.last_message %>
                </p>
              <% end %>
            </div>
            <% if conversation.respond_to?(:updated_at) %>
              <span class="ms-2 shrink-0 text-xs text-gray-500 dark:text-gray-400">
                <%= time_ago_in_words(conversation.updated_at) rescue "" %>
              </span>
            <% end %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</aside>
