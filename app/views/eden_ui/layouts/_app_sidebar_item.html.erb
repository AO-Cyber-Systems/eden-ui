<%# locals: (item:) %>

<li>
  <a href="<%= item[:path] || '#' %>" class="<%= 'bg-gray-100 dark:bg-gray-700' if item[:active] %> group flex items-center rounded-lg p-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">
    <% if item[:icon].present? %>
      <svg class="h-5 w-5 shrink-0 text-gray-500 transition duration-75 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <%= item[:icon].html_safe %>
      </svg>
    <% end %>
    <span class="ms-3 flex-1 whitespace-nowrap"><%= item[:label] %></span>
    <% if item[:badge].present? %>
      <span class="ms-3 inline-flex items-center justify-center rounded-full bg-primary-100 px-2 text-sm font-medium text-primary-800 dark:bg-primary-900 dark:text-primary-300">
        <%= item[:badge] %>
      </span>
    <% end %>
  </a>
</li>
