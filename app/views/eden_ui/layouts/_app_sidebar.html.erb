<%# locals: (sidebar_items: [], sidebar_bottom_items: [], collapsed: false) %>

<aside id="eden-sidebar" data-controller="eden-sidebar" data-eden-sidebar-collapsed-value="<%= collapsed %>" class="fixed left-0 top-0 z-40 h-screen w-64 -translate-x-full border-r border-gray-200 bg-white pt-20 transition-transform dark:border-gray-700 dark:bg-gray-800 sm:translate-x-0" aria-label="Sidebar">
  <div class="flex h-full flex-col overflow-y-auto px-3 pb-4">
    <ul class="flex-1 space-y-2 font-medium">
      <% sidebar_items.each do |item| %>
        <% if item[:group].present? %>
          <li class="pt-4 first:pt-0">
            <span class="mb-2 block px-3 text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400">
              <%= item[:group] %>
            </span>
            <ul class="space-y-1">
              <% (item[:items] || []).each do |sub_item| %>
                <%= render partial: "eden_ui/layouts/app_sidebar_item", locals: { item: sub_item } %>
              <% end %>
            </ul>
          </li>
        <% elsif item[:children].present? %>
          <li>
            <button type="button" class="group flex w-full items-center rounded-lg p-2 text-base text-gray-900 transition duration-75 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700" aria-controls="sidebar-dropdown-<%= item[:id] || item[:label].parameterize %>" data-action="click->eden-sidebar#toggleSubmenu">
              <% if item[:icon].present? %>
                <svg class="h-5 w-5 shrink-0 text-gray-500 transition duration-75 group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                  <%= item[:icon].html_safe %>
                </svg>
              <% end %>
              <span class="ms-3 flex-1 whitespace-nowrap text-left rtl:text-right"><%= item[:label] %></span>
              <svg class="h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
              </svg>
            </button>
            <ul id="sidebar-dropdown-<%= item[:id] || item[:label].parameterize %>" class="hidden space-y-1 py-1">
              <% item[:children].each do |child| %>
                <li>
                  <a href="<%= child[:path] || '#' %>" class="<%= 'bg-gray-100 dark:bg-gray-700' if child[:active] %> group flex w-full items-center rounded-lg p-2 pl-11 text-base text-gray-900 transition duration-75 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700">
                    <%= child[:label] %>
                  </a>
                </li>
              <% end %>
            </ul>
          </li>
        <% else %>
          <%= render partial: "eden_ui/layouts/app_sidebar_item", locals: { item: item } %>
        <% end %>
      <% end %>
    </ul>

    <% if sidebar_bottom_items.present? %>
      <ul class="mt-4 space-y-2 border-t border-gray-200 pt-4 font-medium dark:border-gray-700">
        <% sidebar_bottom_items.each do |item| %>
          <%= render partial: "eden_ui/layouts/app_sidebar_item", locals: { item: item } %>
        <% end %>
      </ul>
    <% end %>
  </div>
</aside>

<%# Overlay for mobile sidebar %>
<div data-eden-sidebar-target="overlay" class="fixed inset-0 z-30 hidden bg-gray-900/50 dark:bg-gray-900/80" data-action="click->eden-sidebar#close"></div>
