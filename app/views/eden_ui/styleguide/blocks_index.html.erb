<div class="max-w-5xl mx-auto">
  <%# Hero %>
  <div class="mb-10">
    <div class="flex items-center gap-3 mb-3">
      <a href="<%= eden_ui.root_path %>" class="text-zinc-400 dark:text-zinc-500 hover:text-zinc-600 dark:hover:text-zinc-300 transition-colors">
        <%= eden_icon("arrow-left", size: :sm) %>
      </a>
      <h1 class="text-3xl lg:text-4xl font-display font-bold text-zinc-900 dark:text-white">
        Page <span class="text-gold-500">Blocks</span>
      </h1>
    </div>
    <p class="text-lg text-zinc-500 dark:text-zinc-400 max-w-2xl">
      <%= @block_count %> production-ready page sections across <%= @block_categories.size %> categories. Each block is a complete, standalone section you can drop into any page.
    </p>
  </div>

  <%# Category cards %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 mb-10">
    <% @block_categories.each do |slug, category| %>
      <a href="<%= eden_ui.styleguide_block_category_path(block_category: slug) %>"
         class="group block p-6 border border-zinc-200 dark:border-zinc-800 rounded-xl bg-white dark:bg-zinc-900 hover:border-gold-500/50 dark:hover:border-gold-500/30 hover:shadow-lg transition-all duration-200">
        <div class="flex items-center gap-3 mb-3">
          <div class="p-2.5 rounded-lg bg-gold-500/10 text-gold-600 dark:text-gold-400 group-hover:bg-gold-500/20 transition-colors">
            <%= eden_icon(category[:icon], size: :md) rescue eden_icon("document", size: :md) %>
          </div>
          <div>
            <h2 class="text-lg font-display font-semibold text-zinc-900 dark:text-white"><%= category[:label] %></h2>
            <span class="text-xs text-zinc-400 dark:text-zinc-500"><%= category[:blocks].size %> blocks</span>
          </div>
        </div>
        <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-4"><%= category[:description] %></p>
        <div class="flex flex-wrap gap-1.5">
          <% category[:blocks].first(4).each do |block| %>
            <span class="inline-flex px-2 py-0.5 text-[11px] rounded-full bg-zinc-100 dark:bg-zinc-800 text-zinc-500 dark:text-zinc-400">
              <%= block.name %>
            </span>
          <% end %>
          <% if category[:blocks].size > 4 %>
            <span class="inline-flex px-2 py-0.5 text-[11px] rounded-full bg-zinc-100 dark:bg-zinc-800 text-zinc-400 dark:text-zinc-500">
              +<%= category[:blocks].size - 4 %> more
            </span>
          <% end %>
        </div>
      </a>
    <% end %>
  </div>

  <%# Quick stats %>
  <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
    <% @block_categories.each do |slug, category| %>
      <div class="p-4 border border-zinc-200 dark:border-zinc-800 rounded-xl bg-white dark:bg-zinc-900 text-center">
        <p class="text-2xl font-display font-bold text-gold-500"><%= category[:blocks].size %></p>
        <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1"><%= category[:label] %></p>
      </div>
    <% end %>
  </div>
</div>
