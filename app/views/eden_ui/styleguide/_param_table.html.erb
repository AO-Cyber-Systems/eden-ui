<%# locals: (params:) %>
<% if params.any? %>
  <div class="border border-zinc-200 dark:border-zinc-800 rounded-xl overflow-hidden">
    <div class="px-4 py-3 bg-zinc-50 dark:bg-zinc-900/50 border-b border-zinc-200 dark:border-zinc-800">
      <h3 class="text-sm font-semibold text-zinc-700 dark:text-zinc-300">Parameters</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead>
          <tr class="border-b border-zinc-200 dark:border-zinc-800">
            <th class="text-left px-4 py-2.5 text-xs font-semibold uppercase tracking-wider text-zinc-500 dark:text-zinc-400">Name</th>
            <th class="text-left px-4 py-2.5 text-xs font-semibold uppercase tracking-wider text-zinc-500 dark:text-zinc-400">Type</th>
            <th class="text-left px-4 py-2.5 text-xs font-semibold uppercase tracking-wider text-zinc-500 dark:text-zinc-400">Default</th>
            <th class="text-left px-4 py-2.5 text-xs font-semibold uppercase tracking-wider text-zinc-500 dark:text-zinc-400">Description</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
          <% params.each do |param| %>
            <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-900/50">
              <td class="px-4 py-2.5">
                <code class="text-xs font-mono px-1.5 py-0.5 bg-zinc-100 dark:bg-zinc-800 text-gold-600 dark:text-gold-400 rounded"><%= param.name %></code>
              </td>
              <td class="px-4 py-2.5 text-xs text-zinc-500 dark:text-zinc-400"><%= param.type %></td>
              <td class="px-4 py-2.5">
                <code class="text-xs font-mono text-zinc-500 dark:text-zinc-400"><%= param.default %></code>
              </td>
              <td class="px-4 py-2.5 text-zinc-600 dark:text-zinc-400">
                <%= param.description %>
                <% if param.options.present? %>
                  <div class="mt-1 flex flex-wrap gap-1">
                    <% param.options.each do |opt| %>
                      <span class="inline-block text-[10px] px-1.5 py-0.5 bg-zinc-100 dark:bg-zinc-800 text-zinc-600 dark:text-zinc-400 rounded font-mono"><%= opt %></span>
                    <% end %>
                  </div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
