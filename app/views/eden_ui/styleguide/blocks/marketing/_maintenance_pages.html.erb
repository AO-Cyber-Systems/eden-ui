              <%= eden_input(type: :email, placeholder: "your@email.com", id: "maintenance-email", name: "email") %>
            </div>
            <%= eden_button(variant: :primary, type: :submit) { "Notify me" } %>
          </div>
        </form>
        <div class="mt-8 flex justify-center gap-6 text-zinc-400">
          <a href="#" class="hover:text-zinc-600 dark:hover:text-zinc-300">
            <%= eden_icon("globe-alt", size: :md) %>
          </a>
          <a href="#" class="hover:text-zinc-600 dark:hover:text-zinc-300">
