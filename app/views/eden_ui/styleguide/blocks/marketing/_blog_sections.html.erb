<%# app/views/eden_ui/styleguide/blocks/marketing/_blog_sections.html.erb %>

<%= styleguide_block_example(
  title: "Blog Card Grid",
  description: "Three-column blog card grid with image placeholders, categories, and excerpts",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="grid gap-8 lg:grid-cols-3">
      eden_card do
        eden_badge(text: "Category")
        <h2>Title</h2>
        <p>Excerpt...</p>
        eden_avatar(initials: "...", size: :sm)
      end
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
        <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-zinc-900 dark:text-white">Our Blog</h2>
        <p class="font-light text-zinc-500 sm:text-xl dark:text-zinc-400">We use an agile approach to test assumptions and connect with the needs of your audience early and often.</p>
      </div>
      <div class="grid gap-8 lg:grid-cols-3">
        <article class="p-6 bg-white rounded-lg border border-zinc-200 shadow-md dark:bg-zinc-800 dark:border-zinc-700">
          <div class="w-full h-48 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center mb-5">
            <%= eden_icon("photo", size: :xl) %>
          </div>
          <div class="flex justify-between items-center mb-5 text-zinc-500">
            <%= eden_badge(text: "Tutorial", variant: :primary, size: :sm) %>
            <span class="text-sm">14 days ago</span>
          </div>
          <h2 class="mb-2 text-2xl font-bold tracking-tight text-zinc-900 dark:text-white"><a href="#">How to quickly deploy a static website</a></h2>
          <p class="mb-5 font-light text-zinc-500 dark:text-zinc-400">Static websites are now used to bootstrap lots of websites and are becoming the basis for a variety of tools.</p>
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-3">
              <%= eden_avatar(initials: "JL", size: :sm) %>
              <span class="font-medium dark:text-white">Jese Leos</span>
            </div>
            <a href="#" class="inline-flex items-center font-medium text-gold-600 dark:text-gold-500 hover:underline">
              Read more
              <%= eden_icon("arrow-right", size: :sm) %>
            </a>
          </div>
        </article>
        <article class="p-6 bg-white rounded-lg border border-zinc-200 shadow-md dark:bg-zinc-800 dark:border-zinc-700">
          <div class="w-full h-48 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center mb-5">
            <%= eden_icon("photo", size: :xl) %>
          </div>
          <div class="flex justify-between items-center mb-5 text-zinc-500">
            <%= eden_badge(text: "Article", variant: :default, size: :sm) %>
            <span class="text-sm">2 days ago</span>
          </div>
          <h2 class="mb-2 text-2xl font-bold tracking-tight text-zinc-900 dark:text-white"><a href="#">Our first project with React</a></h2>
          <p class="mb-5 font-light text-zinc-500 dark:text-zinc-400">We decided to share a case study about building our first project with React and the lessons we learned.</p>
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-3">
              <%= eden_avatar(initials: "BG", size: :sm) %>
              <span class="font-medium dark:text-white">Bonnie Green</span>
            </div>
            <a href="#" class="inline-flex items-center font-medium text-gold-600 dark:text-gold-500 hover:underline">
              Read more
              <%= eden_icon("arrow-right", size: :sm) %>
            </a>
          </div>
        </article>
        <article class="p-6 bg-white rounded-lg border border-zinc-200 shadow-md dark:bg-zinc-800 dark:border-zinc-700">
          <div class="w-full h-48 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center mb-5">
            <%= eden_icon("photo", size: :xl) %>
          </div>
          <div class="flex justify-between items-center mb-5 text-zinc-500">
            <%= eden_badge(text: "Resource", variant: :default, size: :sm) %>
            <span class="text-sm">5 days ago</span>
          </div>
          <h2 class="mb-2 text-2xl font-bold tracking-tight text-zinc-900 dark:text-white"><a href="#">Designing for accessibility</a></h2>
          <p class="mb-5 font-light text-zinc-500 dark:text-zinc-400">A deep dive into making web applications accessible to all users, including those with disabilities.</p>
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-3">
              <%= eden_avatar(initials: "RC", size: :sm) %>
              <span class="font-medium dark:text-white">Roberta Casas</span>
            </div>
            <a href="#" class="inline-flex items-center font-medium text-gold-600 dark:text-gold-500 hover:underline">
              Read more
              <%= eden_icon("arrow-right", size: :sm) %>
            </a>
          </div>
        </article>
      </div>
    </div>
  </section>
<% end %>

