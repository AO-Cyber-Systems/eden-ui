<%# app/views/eden_ui/styleguide/blocks/marketing/_popup_components.html.erb %>

<%= styleguide_block_example(
  title: "Newsletter Popup",
  description: "Modal popup for newsletter signup with email input",
  source: 'eden_modal(id: "newsletter-popup", size: :md) do
  <div class="p-6 text-center">
    <h3>Stay Updated</h3>
    <p>Subscribe to our newsletter...</p>
    eden_input(type: :email, placeholder: "Enter your email")
    eden_button(variant: :primary) { "Subscribe" }
  </div>
end'
) do %>
  <div class="p-4">
    <div class="relative bg-white rounded-lg shadow dark:bg-zinc-800 max-w-md mx-auto">
      <button class="absolute top-3 right-3 text-zinc-400 hover:text-zinc-900 dark:hover:text-white">
        <%= eden_icon("x-mark", size: :sm) %>
      </button>
      <div class="p-6 text-center">
        <div class="mx-auto mb-4 w-12 h-12 rounded-full bg-gold-100 dark:bg-gold-900 flex items-center justify-center">
          <%= eden_icon("envelope", size: :lg) %>
        </div>
        <h3 class="mb-2 text-xl font-semibold text-zinc-900 dark:text-white">Stay Updated</h3>
        <p class="mb-6 text-sm text-zinc-500 dark:text-zinc-400">Subscribe to our newsletter and get the latest updates delivered straight to your inbox.</p>
        <form class="space-y-3">
          <%= eden_input(type: :email, placeholder: "Enter your email", id: "popup-email", name: "email") %>
          <%= eden_button(variant: :primary, type: :submit) { "Subscribe" } %>
        </form>
        <p class="mt-4 text-xs text-zinc-500 dark:text-zinc-400">No spam. Unsubscribe at any time.</p>
      </div>
    </div>
  </div>
<% end %>

<%= styleguide_block_example(
  title: "Confirmation Popup",
  description: "Action confirmation popup with icon and dual buttons",
  source: 'eden_modal(id: "confirm-popup", size: :sm) do
  <div class="p-6 text-center">
    eden_icon("exclamation-triangle", size: :xl)
    <h3>Are you sure?</h3>
    <p>This action cannot be undone.</p>
    eden_button(variant: :danger) { "Yes, delete" }
    eden_button(variant: :ghost) { "Cancel" }
  </div>
end'
) do %>
  <div class="p-4">
    <div class="relative bg-white rounded-lg shadow dark:bg-zinc-800 max-w-sm mx-auto">
      <button class="absolute top-3 right-3 text-zinc-400 hover:text-zinc-900 dark:hover:text-white">
        <%= eden_icon("x-mark", size: :sm) %>
      </button>
      <div class="p-6 text-center">
        <div class="mx-auto mb-4 text-zinc-400 dark:text-zinc-500">
          <svg class="mx-auto w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"></path>
          </svg>
        </div>
        <h3 class="mb-2 text-lg font-semibold text-zinc-900 dark:text-white">Are you sure?</h3>
        <p class="mb-6 text-sm text-zinc-500 dark:text-zinc-400">This action cannot be undone. This will permanently delete the item and all associated data.</p>
        <div class="flex justify-center gap-3">
          <%= eden_button(variant: :danger) { "Yes, delete it" } %>
          <%= eden_button(variant: :ghost) { "Cancel" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= styleguide_block_example(
  title: "Promo Popup",
  description: "Promotional popup with discount offer and CTA",
  source: 'eden_modal(id: "promo-popup", size: :md) do
  <div class="p-6 text-center">
    eden_badge(text: "Limited Time", variant: :warning)
    <h3>50% Off Premium</h3>
    <p>Upgrade today and save.</p>
    eden_button(variant: :primary, size: :lg) { "Claim Offer" }
  </div>
end'
) do %>
  <div class="p-4">
    <div class="relative bg-white rounded-lg shadow dark:bg-zinc-800 max-w-md mx-auto overflow-hidden">
      <div class="bg-gradient-to-r from-gold-500 to-gold-600 px-6 py-4 text-center">
        <span class="inline-block px-3 py-1 text-xs font-bold text-gold-900 bg-white rounded-full mb-2">LIMITED TIME</span>
        <h3 class="text-2xl font-bold text-white">50% Off Premium</h3>
      </div>
      <button class="absolute top-3 right-3 text-white/80 hover:text-white">
        <%= eden_icon("x-mark", size: :sm) %>
      </button>
      <div class="p-6 text-center">
        <p class="mb-6 text-zinc-500 dark:text-zinc-400">Upgrade to Eden Premium today and get access to all components, templates, and lifetime updates at half price.</p>
        <div class="mb-4">
          <span class="text-4xl font-extrabold text-zinc-900 dark:text-white">$49</span>
          <span class="text-lg text-zinc-500 line-through ml-2">$99</span>
        </div>
        <%= eden_button(variant: :primary, size: :lg, href: "#") { "Claim Offer Now" } %>
        <p class="mt-4 text-xs text-zinc-500 dark:text-zinc-400">Offer expires in 24 hours</p>
      </div>
    </div>
  </div>
<% end %>
