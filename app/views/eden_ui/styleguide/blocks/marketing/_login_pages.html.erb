<%# app/views/eden_ui/styleguide/blocks/marketing/_login_pages.html.erb %>

<%= styleguide_block_example(
  title: "Default Login",
  description: "Centered login form with email, password, remember me, and forgot password link",
  source: '<section class="bg-zinc-50 dark:bg-zinc-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    eden_card do
      <h1>Sign in to your account</h1>
      <form class="space-y-4">
        eden_form_group(label: "Email") { eden_input(type: :email, placeholder: "name@eden.com") }
        eden_form_group(label: "Password") { eden_input(type: :password, placeholder: "••••••••") }
        eden_checkbox(label: "Remember me")
        eden_button(variant: :primary) { "Sign in" }
      </form>
    end
  </div>
</section>'
) do %>
  <section class="bg-zinc-50 dark:bg-zinc-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-16">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-zinc-900 dark:text-white">Eden</a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-zinc-800 dark:border-zinc-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-zinc-900 md:text-2xl dark:text-white">Sign in to your account</h1>
          <form class="space-y-4 md:space-y-6" action="#">
            <%= eden_form_group(label: "Your email", required: true) do %>
              <%= eden_input(type: :email, placeholder: "name@eden.com", id: "login-email", name: "email") %>
            <% end %>
            <%= eden_form_group(label: "Password", required: true) do %>
              <%= eden_input(type: :password, placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", id: "login-password", name: "password") %>
            <% end %>
            <div class="flex items-center justify-between">
              <%= eden_checkbox(label: "Remember me", id: "login-remember") %>
              <a href="#" class="text-sm font-medium text-gold-600 hover:underline dark:text-gold-500">Forgot password?</a>
            </div>
            <%= eden_button(variant: :primary, type: :submit) { "Sign in" } %>
            <p class="text-sm font-light text-zinc-500 dark:text-zinc-400">
              Don&rsquo;t have an account yet? <a href="#" class="font-medium text-gold-600 hover:underline dark:text-gold-500">Sign up</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
<% end %>

