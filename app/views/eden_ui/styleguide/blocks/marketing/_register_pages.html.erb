<%# app/views/eden_ui/styleguide/blocks/marketing/_register_pages.html.erb %>

<%= styleguide_block_example(
  title: "Default Registration",
  description: "Registration form with full name, email, password, and terms checkbox",
  source: '<section class="bg-zinc-50 dark:bg-zinc-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto">
    eden_card do
      <h1>Create an account</h1>
      <form class="space-y-4">
        eden_form_group(label: "Full name") { eden_input(placeholder: "John Doe") }
        eden_form_group(label: "Email") { eden_input(type: :email) }
        eden_form_group(label: "Password") { eden_input(type: :password) }
        eden_form_group(label: "Confirm password") { eden_input(type: :password) }
        eden_checkbox(label: "I agree to the Terms")
        eden_button(variant: :primary) { "Create account" }
      </form>
    end
  </div>
</section>'
) do %>
  <section class="bg-zinc-50 dark:bg-zinc-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-16">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-zinc-900 dark:text-white">Eden</a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-zinc-800 dark:border-zinc-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-zinc-900 md:text-2xl dark:text-white">Create an account</h1>
          <form class="space-y-4 md:space-y-6" action="#">
            <%= eden_form_group(label: "Full name", required: true) do %>
              <%= eden_input(placeholder: "John Doe", id: "register-name", name: "name") %>
            <% end %>
            <%= eden_form_group(label: "Your email", required: true) do %>
              <%= eden_input(type: :email, placeholder: "name@eden.com", id: "register-email", name: "email") %>
            <% end %>
            <%= eden_form_group(label: "Password", required: true) do %>
              <%= eden_input(type: :password, placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", id: "register-password", name: "password") %>
            <% end %>
            <%= eden_form_group(label: "Confirm password", required: true) do %>
              <%= eden_input(type: :password, placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", id: "register-confirm", name: "password_confirmation") %>
            <% end %>
            <div class="flex items-start">
              <%= eden_checkbox(label: nil, id: "register-terms") %>
              <label for="register-terms" class="ml-2 text-sm text-zinc-500 dark:text-zinc-300">I accept the <a class="font-medium text-gold-600 hover:underline dark:text-gold-500" href="#">Terms and Conditions</a></label>
            </div>
            <%= eden_button(variant: :primary, type: :submit) { "Create an account" } %>
            <p class="text-sm font-light text-zinc-500 dark:text-zinc-400">
              Already have an account? <a href="#" class="font-medium text-gold-600 hover:underline dark:text-gold-500">Login here</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
<% end %>

