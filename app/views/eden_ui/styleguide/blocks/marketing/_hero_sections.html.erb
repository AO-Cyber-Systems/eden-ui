    <div class="mr-auto place-self-center lg:col-span-7">
      <h1>...</h1>
      <p>...</p>
      eden_button(variant: :primary, size: :lg) { "Get started" }
      eden_button(variant: :ghost, size: :lg) { "Watch demo" }
    </div>
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
      <!-- image placeholder -->
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
      <div class="mr-auto place-self-center lg:col-span-7">
        <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">Payments tool for software companies</h1>
        <p class="max-w-2xl mb-6 font-light text-zinc-500 lg:mb-8 md:text-lg lg:text-xl dark:text-zinc-400">From checkout to global sales tax compliance, companies around the world use Eden to simplify their payment stack.</p>
        <div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
          <%= eden_button(variant: :primary, size: :lg, href: "#") { "Get started" } %>
          <%= eden_button(variant: :ghost, size: :lg, href: "#") { "Watch demo" } %>
        </div>
      </div>
      <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
        <div class="w-full h-72 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center">
          <%= eden_icon("photo", size: :xl) %>
        </div>
      </div>
    </div>
  </section>
<% end %>

