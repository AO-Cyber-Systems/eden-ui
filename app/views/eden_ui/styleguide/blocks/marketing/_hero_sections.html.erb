<%# app/views/eden_ui/styleguide/blocks/marketing/_hero_sections.html.erb %>

<%= styleguide_block_example(
  title: "Default Hero",
  description: "Centered hero with headline, subtitle, and dual CTA buttons",
  source: 'eden_jumbotron(title: "Build fast, ship faster", subtitle: "...") do
  eden_button(variant: :primary, size: :lg) { "Get started" }
  eden_button(variant: :ghost, size: :lg) { "Learn more" }
end'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
      <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-zinc-900 md:text-5xl lg:text-6xl dark:text-white">Build fast, ship faster</h1>
      <p class="mb-8 text-lg font-normal text-zinc-500 lg:text-xl sm:px-16 lg:px-48 dark:text-zinc-400">From checkout to global sales tax compliance, companies around the world use Eden to simplify their payment stack.</p>
      <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
        <%= eden_button(variant: :primary, size: :lg, href: "#") { "Get started" } %>
        <%= eden_button(variant: :ghost, size: :lg, href: "#") do %>
          Learn more
          <%= eden_icon("arrow-right", size: :sm) %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Hero with Image",
  description: "Split hero with text on the left and image placeholder on the right",
  source: '<section class="bg-white dark:bg-zinc-900">
