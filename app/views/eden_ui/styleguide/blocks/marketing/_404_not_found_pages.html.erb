<%# app/views/eden_ui/styleguide/blocks/marketing/_404_not_found_pages.html.erb %>

<%= styleguide_block_example(
  title: "Default 404",
  description: "Centered 404 not found page with description and navigation buttons",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center">
      <h1 class="text-7xl font-extrabold text-gold-600">404</h1>
      <p class="text-3xl font-bold">Something is missing.</p>
      <p>Sorry, we can not find that page.</p>
      eden_button(variant: :primary) { "Back to Homepage" }
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center">
        <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-gold-600 dark:text-gold-500">404</h1>
        <p class="mb-4 text-3xl tracking-tight font-bold text-zinc-900 md:text-4xl dark:text-white">Something&rsquo;s missing.</p>
        <p class="mb-4 text-lg font-light text-zinc-500 dark:text-zinc-400">Sorry, we can&rsquo;t find that page. You&rsquo;ll find lots to explore on the home page.</p>
        <%= eden_button(variant: :primary, size: :lg, href: "#") { "Back to Homepage" } %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "404 with Illustration",
  description: "Not found page with a decorative illustration placeholder and search",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-sm text-center">
      <!-- illustration placeholder -->
      <h1>Page not found</h1>
      <p>...</p>
      eden_search_input(placeholder: "Search for pages...")
      eden_button(variant: :primary) { "Go home" }
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center">
        <div class="mx-auto mb-8 w-48 h-48 bg-zinc-100 dark:bg-zinc-800 rounded-full flex items-center justify-center">
          <span class="text-6xl font-extrabold text-zinc-300 dark:text-zinc-600">404</span>
        </div>
        <h1 class="mb-4 text-2xl tracking-tight font-bold text-zinc-900 md:text-3xl dark:text-white">Page not found</h1>
        <p class="mb-6 text-lg font-light text-zinc-500 dark:text-zinc-400">The page you&rsquo;re looking for doesn&rsquo;t exist or has been moved. Try searching for what you need.</p>
        <div class="max-w-md mx-auto mb-6">
          <%= eden_search_input(placeholder: "Search for pages...", size: :md) %>
        </div>
        <div class="flex justify-center gap-3">
          <%= eden_button(variant: :primary, href: "#") { "Go to homepage" } %>
          <%= eden_button(variant: :ghost, href: "#") { "Contact support" } %>
        </div>
      </div>
    </div>
  </section>
<% end %>
