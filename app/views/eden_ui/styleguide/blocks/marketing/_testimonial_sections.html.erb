<%# app/views/eden_ui/styleguide/blocks/marketing/_testimonial_sections.html.erb %>

<%= styleguide_block_example(
  title: "Default Testimonial",
  description: "Centered blockquote testimonial with avatar and attribution",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6">
    <figure class="max-w-screen-md mx-auto">
      <blockquote>...</blockquote>
      <figcaption>
        eden_avatar(src: "...", size: :sm)
        <cite>name and title</cite>
      </figcaption>
    </figure>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="max-w-screen-xl px-4 py-8 mx-auto text-center lg:py-16 lg:px-6">
      <figure class="max-w-screen-md mx-auto">
        <svg class="h-12 mx-auto mb-3 text-zinc-400 dark:text-zinc-600" viewBox="0 0 24 27" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M14.017 18L14.017 10.609C14.017 4.905 17.748 1.039 23 0L23.995 2.151C21.563 3.068 20 5.789 20 8H24V18H14.017ZM0 18V10.609C0 4.905 3.748 1.038 9 0L9.996 2.151C7.563 3.068 6 5.789 6 8H9.983L9.983 18L0 18Z" fill="currentColor"/>
        </svg>
        <blockquote>
          <p class="text-2xl font-medium text-zinc-900 dark:text-white">&ldquo;Eden is just awesome. It contains tons of predesigned components and pages starting from login screen to complex dashboard. Perfect choice for your next SaaS application.&rdquo;</p>
        </blockquote>
        <figcaption class="flex items-center justify-center mt-6 space-x-3">
          <%= eden_avatar(initials: "MG", size: :sm) %>
          <div class="flex items-center divide-x-2 divide-zinc-500 dark:divide-zinc-700">
            <cite class="pr-3 font-medium text-zinc-900 dark:text-white">Michael Gough</cite>
            <cite class="pl-3 text-sm text-zinc-500 dark:text-zinc-400">CEO at Google</cite>
          </div>
        </figcaption>
      </figure>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Testimonial Cards",
  description: "Grid of testimonial cards with star ratings",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="grid mb-8 lg:mb-12 lg:grid-cols-2 gap-8">
      eden_card do
        eden_rating(value: 5, readonly: true)
        <blockquote>...</blockquote>
        eden_avatar(initials: "...", size: :sm)
      end
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center mb-8 lg:mb-16">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-zinc-900 dark:text-white">Testimonials</h2>
        <p class="font-light text-zinc-500 lg:mb-8 sm:text-xl dark:text-zinc-400">Explore the whole collection of open-source web components and elements built with utility classes from Tailwind CSS.</p>
      </div>
      <div class="grid mb-8 lg:mb-12 lg:grid-cols-2 gap-8">
        <%= eden_card do %>
          <div class="mb-4">
            <%= eden_rating(value: 5, size: :sm, readonly: true) %>
          </div>
          <blockquote class="mb-4">
            <p class="text-zinc-500 dark:text-zinc-400">&ldquo;If you care for your time, I hands down would go with this. Eden saves so much time because I can just design my site from scratch.&rdquo;</p>
          </blockquote>
          <div class="flex items-center space-x-3">
            <%= eden_avatar(initials: "BW", size: :sm) %>
            <div>
              <p class="font-medium text-zinc-900 dark:text-white">Bonnie Green</p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400">Developer at Open AI</p>
            </div>
          </div>
        <% end %>
        <%= eden_card do %>
          <div class="mb-4">
            <%= eden_rating(value: 5, size: :sm, readonly: true) %>
          </div>
          <blockquote class="mb-4">
            <p class="text-zinc-500 dark:text-zinc-400">&ldquo;Eden is just awesome. It contains tons of predesigned components and pages starting from login screen to complex dashboard.&rdquo;</p>
          </blockquote>
          <div class="flex items-center space-x-3">
            <%= eden_avatar(initials: "RS", size: :sm) %>
            <div>
              <p class="font-medium text-zinc-900 dark:text-white">Roberta Casas</p>
              <p class="text-sm text-zinc-500 dark:text-zinc-400">Lead Designer at Dropbox</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
