<%# app/views/eden_ui/styleguide/blocks/marketing/_pricing_sections.html.erb %>

<%= styleguide_block_example(
  title: "Default Pricing",
  description: "Three-column pricing cards with feature lists and CTA buttons",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
      <h2>...</h2>
      <p>...</p>
    </div>
    <div class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
      eden_card { "pricing card content" }
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-zinc-900 dark:text-white">Designed for business teams like yours</h2>
        <p class="mb-5 font-light text-zinc-500 sm:text-xl dark:text-zinc-400">Here at Eden we focus on markets where technology, innovation, and capital can unlock long-term value.</p>
      </div>
      <div class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
        <%# Starter %>
        <%= eden_card do %>
          <h3 class="mb-4 text-2xl font-semibold dark:text-white">Starter</h3>
          <p class="font-light text-zinc-500 sm:text-lg dark:text-zinc-400">Best option for personal use and for your next project.</p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold dark:text-white">$29</span>
            <span class="text-zinc-500 dark:text-zinc-400">/month</span>
          </div>
          <ul role="list" class="mb-8 space-y-4 text-left">
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Individual configuration</span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">No setup, or hidden fees</span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Team size: <span class="font-semibold">1 developer</span></span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Premium support: <span class="font-semibold">6 months</span></span>
            </li>
          </ul>
          <%= eden_button(variant: :primary, size: :lg, href: "#") { "Get started" } %>
        <% end %>
        <%# Company %>
        <%= eden_card do %>
          <h3 class="mb-4 text-2xl font-semibold dark:text-white">Company</h3>
          <p class="font-light text-zinc-500 sm:text-lg dark:text-zinc-400">Relevant for multiple users, extended and premium support.</p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold dark:text-white">$99</span>
            <span class="text-zinc-500 dark:text-zinc-400">/month</span>
          </div>
          <ul role="list" class="mb-8 space-y-4 text-left">
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Individual configuration</span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">No setup, or hidden fees</span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Team size: <span class="font-semibold">10 developers</span></span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Premium support: <span class="font-semibold">24 months</span></span>
            </li>
          </ul>
          <%= eden_button(variant: :primary, size: :lg, href: "#") { "Get started" } %>
        <% end %>
        <%# Enterprise %>
        <%= eden_card do %>
          <h3 class="mb-4 text-2xl font-semibold dark:text-white">Enterprise</h3>
          <p class="font-light text-zinc-500 sm:text-lg dark:text-zinc-400">Best for large scale uses and extended redistribution rights.</p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold dark:text-white">$499</span>
            <span class="text-zinc-500 dark:text-zinc-400">/month</span>
          </div>
          <ul role="list" class="mb-8 space-y-4 text-left">
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Individual configuration</span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">No setup, or hidden fees</span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Team size: <span class="font-semibold">100+ developers</span></span>
            </li>
            <li class="flex items-center space-x-3">
              <%= eden_icon("check", size: :sm) %>
              <span class="text-zinc-600 dark:text-zinc-300">Premium support: <span class="font-semibold">36 months</span></span>
            </li>
          </ul>
          <%= eden_button(variant: :primary, size: :lg, href: "#") { "Get started" } %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Comparison Pricing",
  description: "Pricing section with highlighted recommended plan",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
      eden_card { "basic plan" }
      eden_card { "pro plan (highlighted)" }
      eden_card { "enterprise plan" }
    </div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-zinc-900 dark:text-white">Simple, transparent pricing</h2>
        <p class="mb-5 font-light text-zinc-500 sm:text-xl dark:text-zinc-400">No hidden fees. No surprises. Cancel anytime.</p>
      </div>
      <div class="space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0">
        <%# Basic %>
        <div class="flex flex-col p-6 mx-auto max-w-lg text-center text-zinc-900 bg-white rounded-lg border border-zinc-100 shadow dark:border-zinc-600 dark:bg-zinc-800 dark:text-white">
          <h3 class="mb-4 text-2xl font-semibold">Basic</h3>
          <p class="font-light text-zinc-500 sm:text-lg dark:text-zinc-400">Great for getting started</p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold">$9</span>
            <span class="text-zinc-500 dark:text-zinc-400">/month</span>
          </div>
          <%= eden_button(variant: :ghost, size: :lg, href: "#") { "Get started" } %>
        </div>
        <%# Pro (highlighted) %>
        <div class="flex flex-col p-6 mx-auto max-w-lg text-center text-zinc-900 bg-white rounded-lg border-2 border-gold-500 shadow-lg dark:border-gold-400 dark:bg-zinc-800 dark:text-white relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2">
            <%= eden_badge(text: "Most popular", variant: :primary, pill: true) %>
          </div>
          <h3 class="mb-4 text-2xl font-semibold">Pro</h3>
          <p class="font-light text-zinc-500 sm:text-lg dark:text-zinc-400">Best for growing teams</p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold">$49</span>
            <span class="text-zinc-500 dark:text-zinc-400">/month</span>
          </div>
          <%= eden_button(variant: :primary, size: :lg, href: "#") { "Get started" } %>
        </div>
        <%# Enterprise %>
        <div class="flex flex-col p-6 mx-auto max-w-lg text-center text-zinc-900 bg-white rounded-lg border border-zinc-100 shadow dark:border-zinc-600 dark:bg-zinc-800 dark:text-white">
          <h3 class="mb-4 text-2xl font-semibold">Enterprise</h3>
          <p class="font-light text-zinc-500 sm:text-lg dark:text-zinc-400">For large organizations</p>
          <div class="flex justify-center items-baseline my-8">
            <span class="mr-2 text-5xl font-extrabold">Custom</span>
          </div>
          <%= eden_button(variant: :ghost, size: :lg, href: "#") { "Contact sales" } %>
        </div>
      </div>
    </div>
  </section>
<% end %>
