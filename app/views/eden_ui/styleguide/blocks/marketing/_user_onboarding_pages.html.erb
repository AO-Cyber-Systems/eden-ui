<%# app/views/eden_ui/styleguide/blocks/marketing/_user_onboarding_pages.html.erb %>

<%= styleguide_block_example(
  title: "Stepper Onboarding",
  description: "Multi-step onboarding flow with progress stepper and form fields",
  source: '<section class="bg-zinc-50 dark:bg-zinc-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto">
    eden_stepper do
      eden_stepper_item(label: "Account", status: :complete)
      eden_stepper_item(label: "Profile", status: :current)
      eden_stepper_item(label: "Preferences", status: :upcoming)
    end
    eden_card do
      <h2>Set up your profile</h2>
      <form>
        eden_form_group(label: "Display name") { eden_input(...) }
        eden_form_group(label: "Bio") { eden_textarea(...) }
        eden_button(variant: :primary) { "Continue" }
      </form>
    end
  </div>
</section>'
) do %>
  <section class="bg-zinc-50 dark:bg-zinc-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-16">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-zinc-900 dark:text-white">Eden</a>
      <div class="w-full sm:max-w-xl">
        <div class="mb-8">
          <%= eden_stepper do %>
            <%= eden_stepper_item(label: "Account", status: :complete, icon: "check") %>
            <%= eden_stepper_item(label: "Profile", status: :current, icon: "user") %>
            <%= eden_stepper_item(label: "Preferences", status: :upcoming, icon: "cog") %>
          <% end %>
        </div>
        <div class="bg-white rounded-lg shadow dark:border dark:bg-zinc-800 dark:border-zinc-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h2 class="text-xl font-bold text-zinc-900 dark:text-white">Set up your profile</h2>
            <p class="text-sm text-zinc-500 dark:text-zinc-400">Tell us a bit about yourself so we can personalize your experience.</p>
            <form class="space-y-4" action="#">
              <div class="flex items-center gap-4 mb-4">
                <%= eden_avatar(initials: "JD", size: :xl) %>
                <%= eden_button(variant: :ghost, size: :sm) { "Upload photo" } %>
              </div>
              <%= eden_form_group(label: "Display name", required: true) do %>
                <%= eden_input(placeholder: "John Doe", id: "onboard-name", name: "display_name") %>
              <% end %>
              <%= eden_form_group(label: "Bio") do %>
                <%= eden_textarea(rows: 3, placeholder: "Tell us about yourself...", id: "onboard-bio", name: "bio") %>
              <% end %>
              <%= eden_form_group(label: "Role") do %>
                <%= eden_select(options: ["Developer", "Designer", "Product Manager", "Other"], placeholder: "Select your role", id: "onboard-role", name: "role") %>
              <% end %>
              <div class="flex justify-between pt-4">
                <%= eden_button(variant: :ghost, href: "#") { "Back" } %>
                <%= eden_button(variant: :primary, type: :submit) { "Continue" } %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

