<%# app/views/eden_ui/styleguide/blocks/marketing/_reset_password_pages.html.erb %>

<%= styleguide_block_example(
  title: "Reset Password",
  description: "Password reset form with new password and confirmation fields",
  source: '<section class="bg-zinc-50 dark:bg-zinc-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto">
    eden_card do
      <h1>Reset your password</h1>
      <form class="space-y-4">
        eden_form_group(label: "New password") { eden_input(type: :password) }
        eden_form_group(label: "Confirm password") { eden_input(type: :password) }
        eden_button(variant: :primary) { "Reset password" }
      </form>
    end
  </div>
</section>'
) do %>
  <section class="bg-zinc-50 dark:bg-zinc-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-16">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-zinc-900 dark:text-white">Eden</a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-zinc-800 dark:border-zinc-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-zinc-900 md:text-2xl dark:text-white">Reset your password</h1>
          <p class="text-sm text-zinc-500 dark:text-zinc-400">Enter your new password below to reset your account password.</p>
          <form class="space-y-4 md:space-y-6" action="#">
            <%= eden_form_group(label: "New password", required: true, hint: "Must be at least 8 characters") do %>
              <%= eden_input(type: :password, placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", id: "reset-password", name: "password") %>
            <% end %>
            <%= eden_form_group(label: "Confirm new password", required: true) do %>
              <%= eden_input(type: :password, placeholder: "\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022", id: "reset-confirm", name: "password_confirmation") %>
            <% end %>
            <%= eden_button(variant: :primary, type: :submit) { "Reset password" } %>
          </form>
        </div>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Forgot Password",
  description: "Forgot password form with email input to request a reset link",
  source: '<section class="bg-zinc-50 dark:bg-zinc-900">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto">
    eden_card do
      <h1>Forgot your password?</h1>
      <p>Enter your email to receive a reset link.</p>
      <form class="space-y-4">
        eden_form_group(label: "Your email") { eden_input(type: :email) }
        eden_button(variant: :primary) { "Send reset link" }
      </form>
    end
  </div>
</section>'
) do %>
  <section class="bg-zinc-50 dark:bg-zinc-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-16">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-zinc-900 dark:text-white">Eden</a>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-zinc-800 dark:border-zinc-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-zinc-900 md:text-2xl dark:text-white">Forgot your password?</h1>
          <p class="text-sm text-zinc-500 dark:text-zinc-400">Don&rsquo;t worry! Just type in your email and we will send you a link to reset your password.</p>
          <form class="space-y-4 md:space-y-6" action="#">
            <%= eden_form_group(label: "Your email", required: true) do %>
              <%= eden_input(type: :email, placeholder: "name@eden.com", id: "forgot-email", name: "email") %>
            <% end %>
            <%= eden_button(variant: :primary, type: :submit) { "Send reset link" } %>
            <p class="text-sm font-light text-zinc-500 dark:text-zinc-400">
              Remember your password? <a href="#" class="font-medium text-gold-600 hover:underline dark:text-gold-500">Sign in</a>
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
<% end %>
