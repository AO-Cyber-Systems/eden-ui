<%# app/views/eden_ui/styleguide/blocks/ecommerce/_storefront_hero_sections.html.erb %>

<%= styleguide_block_example(
  title: "Default Storefront Hero",
  description: "Full-width storefront hero with headline, subtitle, and shop CTA buttons",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
    <h1>...</h1>
    <p>...</p>
    eden_button(variant: :primary, size: :lg) { "Shop Now" }
    eden_button(variant: :ghost, size: :lg) { "View Collections" }
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
      <span class="inline-flex items-center mb-4 px-3 py-1 text-sm font-medium text-gold-700 bg-gold-100 rounded-full dark:bg-gold-900 dark:text-gold-300">
        New Season Collection
      </span>
      <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-zinc-900 md:text-5xl lg:text-6xl dark:text-white">Discover Your Style</h1>
      <p class="mb-8 text-lg font-normal text-zinc-500 lg:text-xl sm:px-16 lg:px-48 dark:text-zinc-400">Explore our curated collection of premium products designed to elevate your everyday experience. Free shipping on orders over $50.</p>
      <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:space-x-4">
        <%= eden_button(variant: :primary, size: :lg, href: "#") { "Shop Now" } %>
        <%= eden_button(variant: :ghost, size: :lg, href: "#") do %>
          View Collections
          <%= eden_icon("arrow-right", size: :sm) %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Hero with Featured Categories",
  description: "Split hero with promotional text and category grid cards",
  source: '<section class="bg-white dark:bg-zinc-900">
  <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:grid-cols-12 lg:gap-8">
    <div class="lg:col-span-5"><!-- headline + CTAs --></div>
    <div class="lg:col-span-7"><!-- category grid --></div>
  </div>
</section>'
) do %>
  <section class="bg-white dark:bg-zinc-900">
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 lg:py-16 lg:grid-cols-12">
      <div class="mr-auto place-self-center lg:col-span-5">
        <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white">Summer Sale Up to 50% Off</h1>
        <p class="max-w-2xl mb-6 font-light text-zinc-500 lg:mb-8 md:text-lg lg:text-xl dark:text-zinc-400">Shop our best deals on electronics, fashion, home goods and more. Limited time only.</p>
        <div class="flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4">
          <%= eden_button(variant: :primary, size: :lg, href: "#") { "Shop Sale" } %>
          <%= eden_button(variant: :ghost, size: :lg, href: "#") { "Browse All" } %>
        </div>
      </div>
      <div class="hidden lg:mt-0 lg:col-span-7 lg:grid lg:grid-cols-2 lg:gap-4">
        <div class="relative w-full h-40 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center group cursor-pointer overflow-hidden">
          <span class="absolute bottom-3 left-3 text-sm font-semibold text-zinc-900 dark:text-white bg-white/80 dark:bg-zinc-800/80 px-2 py-1 rounded">Electronics</span>
          <%= eden_icon("bolt", size: :lg) %>
        </div>
        <div class="relative w-full h-40 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center group cursor-pointer overflow-hidden">
          <span class="absolute bottom-3 left-3 text-sm font-semibold text-zinc-900 dark:text-white bg-white/80 dark:bg-zinc-800/80 px-2 py-1 rounded">Fashion</span>
          <%= eden_icon("star", size: :lg) %>
        </div>
        <div class="relative w-full h-40 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center group cursor-pointer overflow-hidden">
          <span class="absolute bottom-3 left-3 text-sm font-semibold text-zinc-900 dark:text-white bg-white/80 dark:bg-zinc-800/80 px-2 py-1 rounded">Home & Garden</span>
          <%= eden_icon("home", size: :lg) %>
        </div>
        <div class="relative w-full h-40 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center group cursor-pointer overflow-hidden">
          <span class="absolute bottom-3 left-3 text-sm font-semibold text-zinc-900 dark:text-white bg-white/80 dark:bg-zinc-800/80 px-2 py-1 rounded">Sports</span>
          <%= eden_icon("fire", size: :lg) %>
        </div>
      </div>
    </div>
  </section>
<% end %>

