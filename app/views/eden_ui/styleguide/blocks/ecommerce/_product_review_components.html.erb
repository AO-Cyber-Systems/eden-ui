<%# app/views/eden_ui/styleguide/blocks/ecommerce/_product_review_components.html.erb %>

<%= styleguide_block_example(
  title: "Review Summary with Breakdown",
  description: "Rating summary with overall score, star breakdown bars, and review count",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    eden_rating(value: 4, max: 5, size: :lg)
    <!-- rating breakdown bars -->
    eden_button(variant: :primary) { "Write a review" }
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <div class="flex flex-col md:flex-row gap-8">
        <div class="md:w-1/3">
          <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-4">Customer Reviews</h2>
          <div class="flex items-center gap-3 mb-4">
            <span class="text-5xl font-bold text-zinc-900 dark:text-white">4.2</span>
            <div>
              <%= eden_rating(value: 4, max: 5, size: :md) %>
              <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1">Based on 1,245 reviews</p>
            </div>
          </div>
          <div class="space-y-2">
            <% [
              { stars: 5, pct: 65 },
              { stars: 4, pct: 20 },
              { stars: 3, pct: 8 },
              { stars: 2, pct: 4 },
              { stars: 1, pct: 3 }
            ].each do |row| %>
              <div class="flex items-center gap-2">
                <span class="text-sm font-medium text-zinc-600 dark:text-zinc-400 w-6"><%= row[:stars] %></span>
                <%= eden_icon("star", size: :xs) %>
                <div class="flex-1 h-2 bg-zinc-200 dark:bg-zinc-700 rounded-full">
                  <div class="h-2 bg-gold-500 rounded-full" style="width: <%= row[:pct] %>%"></div>
                </div>
                <span class="text-sm text-zinc-500 dark:text-zinc-400 w-10 text-right"><%= row[:pct] %>%</span>
              </div>
            <% end %>
          </div>
          <div class="mt-6">
            <%= eden_button(variant: :primary) { "Write a review" } %>
          </div>
        </div>

        <div class="md:w-2/3">
          <div class="space-y-6">
            <% [
              { name: "Sarah M.", date: "Jan 15, 2026", rating: 5, title: "Absolutely love it!", text: "Best purchase I've made this year. The quality is outstanding and it works exactly as described. Highly recommend to anyone considering it.", helpful: 24 },
              { name: "James K.", date: "Jan 10, 2026", rating: 4, title: "Great product, minor issues", text: "Overall very happy with the purchase. Setup was easy and performance is great. Deducting one star because the packaging could be better.", helpful: 12 },
              { name: "Emily R.", date: "Dec 28, 2025", rating: 5, title: "Exceeded expectations", text: "I was skeptical at first but this product truly exceeded my expectations. Fast shipping and excellent customer service too.", helpful: 8 }
            ].each do |review| %>
              <div class="border-b border-zinc-200 dark:border-zinc-700 pb-6">
                <div class="flex items-center justify-between mb-2">
                  <div class="flex items-center gap-3">
                    <%= eden_avatar(initials: review[:name][0..1], size: :sm, rounded: true) %>
                    <div>
                      <p class="text-sm font-medium text-zinc-900 dark:text-white"><%= review[:name] %></p>
                      <p class="text-xs text-zinc-500 dark:text-zinc-400"><%= review[:date] %></p>
                    </div>
                  </div>
                  <%= eden_rating(value: review[:rating], max: 5, size: :sm) %>
                </div>
                <h4 class="text-sm font-semibold text-zinc-900 dark:text-white mb-1"><%= review[:title] %></h4>
                <p class="text-sm text-zinc-500 dark:text-zinc-400"><%= review[:text] %></p>
                <div class="flex items-center gap-4 mt-3">
                  <button class="text-xs text-zinc-500 hover:text-zinc-700 dark:text-zinc-400 dark:hover:text-zinc-300 flex items-center gap-1">
                    <%= eden_icon("check", size: :xs) %>
                    Helpful (<%= review[:helpful] %>)
                  </button>
                  <button class="text-xs text-zinc-500 hover:text-zinc-700 dark:text-zinc-400 dark:hover:text-zinc-300">Report</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Review Form",
  description: "Form for submitting a product review with star rating, title, and comment",
  source: '<form class="max-w-xl">
  <h3>Write a Review</h3>
  eden_rating(value: 0, max: 5, size: :lg)
  eden_input(placeholder: "Review title")
  eden_textarea(rows: 4, placeholder: "Write your review...")
  eden_button(variant: :primary) { "Submit Review" }
</form>'
) do %>
  <div class="max-w-xl bg-white border border-zinc-200 rounded-lg dark:bg-zinc-800 dark:border-zinc-700 p-6">
    <h3 class="text-lg font-semibold text-zinc-900 dark:text-white mb-4">Write a Review</h3>
    <form class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-2">Your Rating</label>
        <%= eden_rating(value: 0, max: 5, size: :lg) %>
      </div>
      <div>
        <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-2">Review Title</label>
        <%= eden_input(type: :text, placeholder: "Summarize your experience") %>
      </div>
      <div>
        <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-2">Your Review</label>
        <%= eden_textarea(rows: 4, placeholder: "What did you like or dislike? How did you use this product?") %>
      </div>
      <div>
        <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-2">Add Photos (optional)</label>
        <div class="flex items-center justify-center w-full h-24 border-2 border-dashed border-zinc-300 dark:border-zinc-600 rounded-lg hover:bg-zinc-50 dark:hover:bg-zinc-700 cursor-pointer">
          <div class="text-center">
            <%= eden_icon("photo", size: :md) %>
            <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">Click to upload</p>
          </div>
        </div>
      </div>
      <%= eden_button(variant: :primary) { "Submit Review" } %>
    </form>
  </div>
<% end %>
