<%# app/views/eden_ui/styleguide/blocks/ecommerce/_product_information_components.html.erb %>

<%= styleguide_block_example(
  title: "Product Specifications Table",
  description: "Product information displayed in a two-column specification table",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    <h2>Technical Specifications</h2>
    <!-- specification rows -->
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-6">Technical Specifications</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-sm text-left text-zinc-500 dark:text-zinc-400">
          <tbody>
            <% [
              ["Brand", "Apple"],
              ["Model", "iMac 24-inch (2024)"],
              ["Processor", "Apple M3 chip"],
              ["Memory", "8GB unified memory"],
              ["Storage", "256GB SSD"],
              ["Display", "24-inch 4.5K Retina"],
              ["Resolution", "4480 x 2520"],
              ["Operating System", "macOS Sonoma"],
              ["Ports", "2x Thunderbolt / USB 4, 2x USB 3, 3.5mm headphone jack"],
              ["Weight", "4.46 kg (9.83 lbs)"]
            ].each_with_index do |(label, value), i| %>
              <tr class="<%= i.even? ? 'bg-zinc-50 dark:bg-zinc-800' : 'bg-white dark:bg-zinc-900' %> border-b border-zinc-200 dark:border-zinc-700">
                <th scope="row" class="px-6 py-4 font-medium text-zinc-900 whitespace-nowrap dark:text-white w-1/3"><%= label %></th>
                <td class="px-6 py-4"><%= value %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Product Description with Features",
  description: "Rich product description with feature highlights and icons",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    <h2>Product Description</h2>
    <p>...</p>
    <!-- feature grid with icons -->
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-4">About this product</h2>
      <p class="text-zinc-500 dark:text-zinc-400 mb-6">The all-new MacBook Pro delivers groundbreaking performance for pros. With the powerful M3 Pro or M3 Max chip, a stunning Liquid Retina XDR display, and all-day battery life, it's the ultimate pro notebook.</p>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
        <% [
          { icon: "bolt", title: "M3 Pro / M3 Max", desc: "Up to 12-core CPU, 18-core GPU for blazing-fast performance" },
          { icon: "eye", title: "Liquid Retina XDR", desc: "Extreme Dynamic Range display with ProMotion technology" },
          { icon: "clock", title: "22-hour Battery", desc: "Longest battery life ever in a Mac, up to 22 hours" },
          { icon: "shield", title: "Secure Enclave", desc: "Hardware-verified secure boot and encrypted storage" },
          { icon: "globe", title: "Wi-Fi 6E", desc: "Next-generation wireless for faster connectivity" },
          { icon: "fire", title: "Unified Memory", desc: "Up to 128GB unified memory for pro workflows" }
        ].each do |feature| %>
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-gold-100 dark:bg-gold-900 flex items-center justify-center text-gold-600 dark:text-gold-400">
              <%= eden_icon(feature[:icon], size: :sm) %>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-zinc-900 dark:text-white"><%= feature[:title] %></h3>
              <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1"><%= feature[:desc] %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Product Info Accordion",
  description: "Collapsible product information sections with expandable details",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    <!-- accordion sections for shipping, returns, warranty -->
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <div class="max-w-3xl">
        <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-6">Product Information</h2>
        <div class="divide-y divide-zinc-200 dark:divide-zinc-700 border border-zinc-200 dark:border-zinc-700 rounded-lg">
          <% [
            { title: "Shipping Information", content: "Free standard shipping on orders over $50. Express shipping available for $9.99. Orders placed before 2 PM ET ship same day. International shipping available to select countries." },
            { title: "Return Policy", content: "We accept returns within 30 days of purchase. Items must be in original condition with tags attached. Free return shipping is provided for defective items. Refunds are processed within 5-7 business days." },
            { title: "Warranty", content: "This product comes with a 1-year limited manufacturer warranty. Extended warranty plans are available at checkout for up to 3 years of coverage including accidental damage protection." },
            { title: "Care Instructions", content: "Clean with a soft, lint-free cloth. Avoid exposure to extreme temperatures. Do not use abrasive cleaners or solvents. Store in a cool, dry place when not in use." }
          ].each_with_index do |section, i| %>
            <div class="p-5">
              <button class="flex items-center justify-between w-full text-left">
                <span class="text-base font-medium text-zinc-900 dark:text-white"><%= section[:title] %></span>
                <%= eden_icon("chevron-down", size: :sm) %>
              </button>
              <% if i == 0 %>
                <p class="mt-3 text-sm text-zinc-500 dark:text-zinc-400"><%= section[:content] %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>
