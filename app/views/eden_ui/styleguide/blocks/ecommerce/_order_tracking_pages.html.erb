      <div class="flex items-center justify-between mb-4">
        <h3 class="text-sm font-semibold text-zinc-900 dark:text-white">Order #ORD-20260213-7842</h3>
        <%= eden_badge(text: "In Transit", variant: :primary, size: :sm) %>
      </div>

      <%= eden_progress(value: 65, size: :sm, variant: :primary) %>

