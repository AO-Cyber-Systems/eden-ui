<%# app/views/eden_ui/styleguide/blocks/ecommerce/_warranty_pages.html.erb %>

<%= styleguide_block_example(
  title: "Warranty Information Page",
  description: "Product warranty details page with coverage information, terms, and claim CTA",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    <h2>Warranty Coverage</h2>
    <!-- warranty tiers -->
    <!-- coverage details -->
    eden_button(variant: :primary) { "File a Claim" }
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <div class="text-center mb-10">
        <h2 class="text-2xl font-bold text-zinc-900 dark:text-white mb-3">Warranty Coverage</h2>
        <p class="text-zinc-500 dark:text-zinc-400 max-w-2xl mx-auto">All our products come with warranty protection. Choose extended coverage for peace of mind.</p>
      </div>

      <!-- Warranty Tiers -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <% [
          { name: "Standard", period: "1 Year", price: "Included", features: ["Manufacturing defects", "Hardware failures", "Free diagnostics", "Standard processing"], recommended: false },
          { name: "Extended", period: "2 Years", price: "$49.99", features: ["Everything in Standard", "Accidental damage", "Priority processing", "Free shipping both ways", "24/7 phone support"], recommended: true },
          { name: "Premium", period: "3 Years", price: "$89.99", features: ["Everything in Extended", "Battery replacement", "Cosmetic damage", "Express repair (48h)", "Loaner device", "Annual check-up"], recommended: false }
        ].each do |tier| %>
          <div class="relative bg-white border rounded-lg dark:bg-zinc-800 p-6 <%= tier[:recommended] ? 'border-gold-500 dark:border-gold-600 ring-2 ring-gold-500/20' : 'border-zinc-200 dark:border-zinc-700' %>">
            <% if tier[:recommended] %>
              <span class="absolute -top-3 left-1/2 -translate-x-1/2">
                <%= eden_badge(text: "Recommended", variant: :primary, size: :sm) %>
              </span>
            <% end %>
            <div class="text-center mb-6">
              <h3 class="text-lg font-semibold text-zinc-900 dark:text-white"><%= tier[:name] %></h3>
              <p class="text-sm text-zinc-500 dark:text-zinc-400"><%= tier[:period] %> coverage</p>
              <p class="text-3xl font-bold text-zinc-900 dark:text-white mt-3"><%= tier[:price] %></p>
            </div>
            <ul class="space-y-3 mb-6">
              <% tier[:features].each do |feature| %>
                <li class="flex items-center gap-2 text-sm text-zinc-600 dark:text-zinc-400">
                  <span class="text-green-500 dark:text-green-400 flex-shrink-0"><%= eden_icon("check", size: :xs) %></span>
                  <%= feature %>
                </li>
              <% end %>
            </ul>
            <%= eden_button(variant: tier[:recommended] ? :primary : :ghost, size: :md) { tier[:price] == "Included" ? "Current Plan" : "Select Plan" } %>
          </div>
        <% end %>
      </div>

      <!-- What's Covered -->
      <div class="bg-zinc-50 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg p-8">
        <h3 class="text-lg font-semibold text-zinc-900 dark:text-white mb-6 text-center">What's Covered?</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div>
            <h4 class="text-sm font-semibold text-green-600 dark:text-green-400 mb-3 flex items-center gap-2">
              <%= eden_icon("check", size: :xs) %>
              Covered
            </h4>
            <ul class="space-y-2">
              <% ["Manufacturing defects", "Hardware component failures", "Battery degradation (below 80%)", "Software issues covered under warranty", "Display defects (dead pixels)"].each do |item| %>
                <li class="text-sm text-zinc-600 dark:text-zinc-400 flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-green-500 rounded-full flex-shrink-0"></span>
                  <%= item %>
                </li>
              <% end %>
            </ul>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-red-600 dark:text-red-400 mb-3 flex items-center gap-2">
              <%= eden_icon("x-mark", size: :xs) %>
              Not Covered (Standard)
            </h4>
            <ul class="space-y-2">
              <% ["Accidental damage or drops", "Water damage (standard plan)", "Cosmetic wear and scratches", "Unauthorized modifications", "Lost or stolen devices"].each do |item| %>
                <li class="text-sm text-zinc-600 dark:text-zinc-400 flex items-center gap-2">
                  <span class="w-1.5 h-1.5 bg-red-500 rounded-full flex-shrink-0"></span>
                  <%= item %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Warranty Claim Form",
  description: "Compact warranty claim submission form with product and issue details",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-lg mx-auto px-4">
    <h2>File a Warranty Claim</h2>
    eden_select(options: [...], placeholder: "Select product")
    eden_textarea(rows: 3, placeholder: "Describe the issue")
    eden_button(variant: :primary) { "Submit Claim" }
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-lg mx-auto px-4">
      <div class="bg-white border border-zinc-200 rounded-lg dark:bg-zinc-800 dark:border-zinc-700 p-6">
        <h2 class="text-lg font-semibold text-zinc-900 dark:text-white mb-2">File a Warranty Claim</h2>
        <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-6">We'll review your claim within 2 business days.</p>

        <form class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-1">Product</label>
            <%= eden_select(options: ["Apple iMac 24\" - #ORD-7842", "AirPods Pro - #ORD-7695", "Magic Keyboard - #ORD-7842"], placeholder: "Select product") %>
          </div>
          <div>
            <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-1">Serial Number</label>
            <%= eden_input(type: :text, placeholder: "Enter product serial number") %>
          </div>
          <div>
            <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-1">Issue Description</label>
            <%= eden_textarea(rows: 3, placeholder: "Describe the defect or problem you're experiencing...") %>
          </div>
          <div>
            <label class="block text-sm font-medium text-zinc-900 dark:text-white mb-1">Proof of Purchase</label>
            <div class="flex items-center justify-center w-full h-20 border-2 border-dashed border-zinc-300 dark:border-zinc-600 rounded-lg hover:bg-zinc-50 dark:hover:bg-zinc-700 cursor-pointer">
              <div class="text-center">
                <%= eden_icon("upload", size: :sm) %>
                <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">Upload receipt or invoice</p>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <%= eden_checkbox(label: "I confirm that the product issue is not due to accidental damage") %>
          </div>
          <div class="pt-2">
            <%= eden_button(variant: :primary) { "Submit Warranty Claim" } %>
          </div>
        </form>
      </div>
    </div>
  </section>
<% end %>
