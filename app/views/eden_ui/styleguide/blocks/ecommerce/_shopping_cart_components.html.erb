<%# app/views/eden_ui/styleguide/blocks/ecommerce/_shopping_cart_components.html.erb %>

<%= styleguide_block_example(
  title: "Default Shopping Cart",
  description: "Shopping cart page with item list, quantity controls, and order summary sidebar",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto lg:grid lg:grid-cols-12 lg:gap-8">
    <div class="lg:col-span-8"><!-- cart items --></div>
    <div class="lg:col-span-4"><!-- order summary --></div>
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-6">Shopping Cart</h2>
      <div class="lg:grid lg:grid-cols-12 lg:gap-8">
        <div class="lg:col-span-8">
          <div class="space-y-4">
            <% [
              { name: "Apple iMac 24\"", desc: "M3 chip, 8GB RAM, 256GB SSD", price: "$1,199.00", qty: 1 },
              { name: "AirPods Pro (2nd gen)", desc: "With MagSafe charging case", price: "$249.00", qty: 2 },
              { name: "Magic Keyboard", desc: "Wireless, with Touch ID", price: "$199.00", qty: 1 }
            ].each do |item| %>
              <div class="flex items-center gap-4 p-4 bg-white border border-zinc-200 rounded-lg dark:bg-zinc-800 dark:border-zinc-700">
                <div class="w-20 h-20 bg-zinc-200 dark:bg-zinc-700 rounded-lg flex items-center justify-center flex-shrink-0">
                  <%= eden_icon("photo", size: :md) %>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="text-sm font-semibold text-zinc-900 dark:text-white truncate"><%= item[:name] %></h3>
                  <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-0.5"><%= item[:desc] %></p>
                  <div class="flex items-center gap-2 mt-2">
                    <button class="w-7 h-7 flex items-center justify-center border border-zinc-300 rounded dark:border-zinc-600 text-zinc-600 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-700">
                      <span class="text-sm font-bold">-</span>
                    </button>
                    <span class="text-sm font-medium text-zinc-900 dark:text-white w-8 text-center"><%= item[:qty] %></span>
                    <button class="w-7 h-7 flex items-center justify-center border border-zinc-300 rounded dark:border-zinc-600 text-zinc-600 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-700">
                      <span class="text-sm font-bold">+</span>
                    </button>
                  </div>
                </div>
                <div class="text-right flex-shrink-0">
                  <p class="text-sm font-bold text-zinc-900 dark:text-white"><%= item[:price] %></p>
                  <button class="mt-2 text-xs text-red-600 hover:text-red-700 dark:text-red-500 flex items-center gap-1">
                    <%= eden_icon("trash", size: :xs) %>
                    Remove
                  </button>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="lg:col-span-4 mt-6 lg:mt-0">
          <div class="bg-zinc-50 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg p-6">
            <h3 class="text-lg font-semibold text-zinc-900 dark:text-white mb-4">Order Summary</h3>
            <div class="space-y-3">
              <div class="flex justify-between text-sm">
                <span class="text-zinc-500 dark:text-zinc-400">Subtotal (4 items)</span>
                <span class="font-medium text-zinc-900 dark:text-white">$1,896.00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-zinc-500 dark:text-zinc-400">Shipping</span>
                <span class="font-medium text-green-600 dark:text-green-400">Free</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-zinc-500 dark:text-zinc-400">Tax</span>
                <span class="font-medium text-zinc-900 dark:text-white">$156.42</span>
              </div>
              <hr class="border-zinc-200 dark:border-zinc-700" />
              <div class="flex justify-between">
                <span class="text-base font-semibold text-zinc-900 dark:text-white">Total</span>
                <span class="text-base font-bold text-zinc-900 dark:text-white">$2,052.42</span>
              </div>
            </div>
            <div class="mt-6 space-y-3">
              <%= eden_button(variant: :primary, size: :lg) { "Proceed to Checkout" } %>
              <div class="flex items-center gap-2">
                <%= eden_input(type: :text, placeholder: "Promo code", size: :sm) %>
                <%= eden_button(variant: :ghost, size: :sm) { "Apply" } %>
              </div>
            </div>
            <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-4 flex items-center gap-1">
              <%= eden_icon("shield", size: :xs) %>
              Secure checkout with SSL encryption
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Empty Cart",
  description: "Empty shopping cart state with illustration and call to action",
  source: '<section class="py-16 bg-white dark:bg-zinc-900 text-center">
  eden_icon("shopping-cart", size: :xl)
  <h2>Your cart is empty</h2>
  eden_button(variant: :primary) { "Continue Shopping" }
</section>'
) do %>
  <section class="py-16 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-md mx-auto text-center px-4">
      <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-zinc-100 dark:bg-zinc-800 flex items-center justify-center text-zinc-400 dark:text-zinc-500">
        <%= eden_icon("shopping-cart", size: :xl) %>
      </div>
      <h2 class="text-xl font-semibold text-zinc-900 dark:text-white mb-2">Your cart is empty</h2>
      <p class="text-sm text-zinc-500 dark:text-zinc-400 mb-6">Looks like you haven't added any items to your cart yet. Browse our products and find something you love.</p>
      <%= eden_button(variant: :primary, size: :lg, href: "#") { "Continue Shopping" } %>
    </div>
  </section>
<% end %>
