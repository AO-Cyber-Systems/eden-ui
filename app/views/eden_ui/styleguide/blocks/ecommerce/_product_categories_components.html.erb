<%# app/views/eden_ui/styleguide/blocks/ecommerce/_product_categories_components.html.erb %>

<%= styleguide_block_example(
  title: "Category Grid Cards",
  description: "Grid of category cards with image placeholders, titles, and item counts",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    <h2>Shop by Category</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
      <!-- category cards -->
    </div>
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <h2 class="text-2xl font-bold text-zinc-900 dark:text-white mb-6">Shop by Category</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <% [
          { name: "Electronics", count: 1240, icon: "bolt" },
          { name: "Fashion", count: 856, icon: "star" },
          { name: "Home & Garden", count: 523, icon: "home" },
          { name: "Sports & Outdoors", count: 412, icon: "fire" },
          { name: "Books", count: 1891, icon: "document" },
          { name: "Toys & Games", count: 367, icon: "heart" },
          { name: "Health & Beauty", count: 589, icon: "shield" },
          { name: "Automotive", count: 234, icon: "cog" }
        ].each do |category| %>
          <a href="#" class="group flex flex-col items-center p-6 bg-white border border-zinc-200 rounded-lg hover:shadow-md hover:border-gold-300 dark:bg-zinc-800 dark:border-zinc-700 dark:hover:border-gold-600 transition-all">
            <div class="w-16 h-16 rounded-full bg-gold-50 dark:bg-gold-900/30 flex items-center justify-center text-gold-600 dark:text-gold-400 mb-3 group-hover:bg-gold-100 dark:group-hover:bg-gold-900/50 transition-colors">
              <%= eden_icon(category[:icon], size: :md) %>
            </div>
            <h3 class="text-sm font-semibold text-zinc-900 dark:text-white text-center"><%= category[:name] %></h3>
            <p class="text-xs text-zinc-500 dark:text-zinc-400 mt-1"><%= number_with_delimiter(category[:count]) %> items</p>
          </a>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Category Banner Cards",
  description: "Large category cards with image backgrounds and overlaid text",
  source: '<section class="py-8 bg-white dark:bg-zinc-900">
  <div class="max-w-screen-xl px-4 mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- banner cards with overlaid category names -->
    </div>
  </div>
</section>'
) do %>
  <section class="py-8 bg-white dark:bg-zinc-900 antialiased">
    <div class="max-w-screen-xl px-4 mx-auto 2xl:px-0">
      <h2 class="text-2xl font-bold text-zinc-900 dark:text-white mb-6">Featured Categories</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% [
          { name: "New Arrivals", desc: "Discover the latest trends", color: "from-gold-600 to-gold-800" },
          { name: "Best Sellers", desc: "Most popular products", color: "from-zinc-600 to-zinc-800" },
          { name: "Sale", desc: "Up to 50% off selected items", color: "from-red-600 to-red-800" }
        ].each do |category| %>
          <a href="#" class="relative group overflow-hidden rounded-lg">
            <div class="w-full h-48 bg-gradient-to-br <%= category[:color] %> flex items-center justify-center">
              <div class="text-center">
                <h3 class="text-xl font-bold text-white"><%= category[:name] %></h3>
                <p class="text-sm text-white/80 mt-1"><%= category[:desc] %></p>
                <span class="inline-flex items-center mt-3 text-sm font-medium text-white">
                  Shop now
                  <%= eden_icon("arrow-right", size: :sm) %>
                </span>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<%= styleguide_block_example(
  title: "Sidebar Category List",
  description: "Vertical category list for sidebar navigation with counts and nested subcategories",
  source: '<aside class="w-64">
  <h3>Categories</h3>
  <ul>
    <li><a href="#">Electronics (1,240)</a></li>
    <!-- more categories -->
  </ul>
</aside>'
) do %>
  <div class="max-w-xs">
    <div class="bg-white border border-zinc-200 rounded-lg dark:bg-zinc-800 dark:border-zinc-700 p-4">
      <h3 class="text-lg font-semibold text-zinc-900 dark:text-white mb-4">Categories</h3>
      <ul class="space-y-1">
        <% [
          { name: "Electronics", count: 1240, active: true, subs: ["Phones", "Laptops", "Tablets", "Accessories"] },
          { name: "Fashion", count: 856, active: false, subs: [] },
          { name: "Home & Garden", count: 523, active: false, subs: [] },
          { name: "Sports", count: 412, active: false, subs: [] },
          { name: "Books", count: 1891, active: false, subs: [] },
          { name: "Toys", count: 367, active: false, subs: [] }
        ].each do |category| %>
          <li>
            <a href="#" class="flex items-center justify-between px-3 py-2 rounded-lg text-sm <%= category[:active] ? 'bg-gold-50 text-gold-700 font-medium dark:bg-gold-900/30 dark:text-gold-400' : 'text-zinc-700 hover:bg-zinc-100 dark:text-zinc-300 dark:hover:bg-zinc-700' %>">
              <span class="flex items-center gap-2">
                <% if category[:active] %>
                  <%= eden_icon("chevron-down", size: :xs) %>
                <% else %>
                  <%= eden_icon("chevron-right", size: :xs) %>
                <% end %>
                <%= category[:name] %>
              </span>
              <span class="text-xs text-zinc-400 dark:text-zinc-500"><%= number_with_delimiter(category[:count]) %></span>
            </a>
            <% if category[:active] && category[:subs].any? %>
              <ul class="ml-6 mt-1 space-y-1">
                <% category[:subs].each do |sub| %>
                  <li>
                    <a href="#" class="block px-3 py-1.5 text-sm text-zinc-600 hover:text-gold-600 dark:text-zinc-400 dark:hover:text-gold-400"><%= sub %></a>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
