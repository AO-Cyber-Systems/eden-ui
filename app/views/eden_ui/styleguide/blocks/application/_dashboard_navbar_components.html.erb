<%= styleguide_block_example(
  title: "Dashboard Navbar with Search",
  description: "Top navigation bar with search, notifications, and user menu",
  source: 'eden_search_input(placeholder: "Search...", size: :sm)
eden_icon("bell", size: :md)
eden_avatar(initials: "JD", size: :sm)'
) do %>
  <nav class="bg-white border-b border-zinc-200 px-4 py-2.5 dark:bg-zinc-800 dark:border-zinc-700">
    <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl">
      <div class="flex justify-start items-center">
        <a href="#" class="flex items-center mr-4">
          <div class="w-8 h-8 rounded-lg bg-gold-500 flex items-center justify-center mr-2">
            <span class="text-white font-bold text-sm">E</span>
          </div>
          <span class="self-center text-xl font-semibold whitespace-nowrap dark:text-white">Eden Dashboard</span>
        </a>
        <div class="hidden md:block md:pl-2">
          <%= eden_search_input(placeholder: "Search anything...", size: :sm) %>
        </div>
      </div>
      <div class="flex items-center gap-2 lg:order-2">
        <button class="md:hidden p-2 text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">
          <%= eden_icon("search", size: :md) %>
        </button>
        <button class="relative p-2 text-zinc-500 rounded-lg hover:text-zinc-900 hover:bg-zinc-100 dark:text-zinc-400 dark:hover:text-white dark:hover:bg-zinc-700">
          <%= eden_icon("bell", size: :md) %>
          <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
        </button>
        <button class="p-2 text-zinc-500 rounded-lg hover:text-zinc-900 hover:bg-zinc-100 dark:text-zinc-400 dark:hover:text-white dark:hover:bg-zinc-700">
          <%= eden_icon("chat-bubble-left", size: :md) %>
        </button>
        <div class="flex items-center gap-2 ml-2 pl-2 border-l border-zinc-200 dark:border-zinc-700">
          <%= eden_avatar(initials: "JD", size: :sm) %>
          <div class="hidden lg:block">
            <p class="text-sm font-medium text-zinc-900 dark:text-white">John Doe</p>
            <p class="text-xs text-zinc-500 dark:text-zinc-400">admin@example.com</p>
          </div>
        </div>
      </div>
    </div>
  </nav>
<% end %>

