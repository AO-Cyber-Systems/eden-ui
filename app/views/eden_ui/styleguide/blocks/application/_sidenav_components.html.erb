<%= styleguide_block_example(
  title: "Multi-level Sidebar Navigation",
  description: "Sidebar with collapsible groups, badges, and user section",
  source: 'eden_icon("home", size: :md)
eden_icon("shopping-cart", size: :md)
eden_badge(text: "Pro", variant: :primary)'
) do %>
  <aside class="w-64 bg-white border-r border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 h-[600px] overflow-y-auto">
    <div class="px-3 py-4">
      <%# Logo/brand %>
      <a href="#" class="flex items-center mb-5 pl-2.5">
        <div class="w-8 h-8 rounded-lg bg-gold-500 flex items-center justify-center mr-2">
          <span class="text-white font-bold text-sm">E</span>
        </div>
        <span class="self-center text-xl font-semibold dark:text-white">Eden</span>
      </a>

      <%# Main navigation %>
      <ul class="space-y-1">
        <li>
          <a href="#" class="flex items-center p-2 text-sm font-medium rounded-lg bg-zinc-100 dark:bg-zinc-700 text-zinc-900 dark:text-white">
            <%= eden_icon("home", size: :md) %>
            <span class="ml-3">Dashboard</span>
          </a>
        </li>
        <li>
          <button class="flex items-center w-full p-2 text-sm font-medium text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700 group">
            <%= eden_icon("shopping-cart", size: :md) %>
            <span class="flex-1 ml-3 text-left whitespace-nowrap">E-commerce</span>
            <%= eden_icon("chevron-down", size: :xs) %>
          </button>
          <ul class="py-1 space-y-1 ml-6">
            <li><a href="#" class="flex items-center p-2 text-sm text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">Products</a></li>
            <li><a href="#" class="flex items-center p-2 text-sm text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">Orders</a></li>
            <li><a href="#" class="flex items-center p-2 text-sm text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">Billing</a></li>
          </ul>
        </li>
        <li>
          <a href="#" class="flex items-center p-2 text-sm font-medium text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">
            <%= eden_icon("chart-bar", size: :md) %>
            <span class="flex-1 ml-3">Analytics</span>
            <%= eden_badge(text: "Pro", variant: :primary, size: :sm) %>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-2 text-sm font-medium text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">
            <%= eden_icon("user", size: :md) %>
            <span class="flex-1 ml-3">Users</span>
            <span class="inline-flex items-center justify-center w-5 h-5 text-xs font-semibold text-gold-800 bg-gold-100 rounded-full dark:bg-gold-200 dark:text-gold-800">3</span>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-2 text-sm font-medium text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">
            <%= eden_icon("envelope", size: :md) %>
            <span class="flex-1 ml-3">Messages</span>
            <span class="inline-flex items-center justify-center w-5 h-5 text-xs font-semibold text-red-800 bg-red-100 rounded-full dark:bg-red-200 dark:text-red-800">5</span>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-2 text-sm font-medium text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">
            <%= eden_icon("document", size: :md) %>
            <span class="ml-3">Pages</span>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-2 text-sm font-medium text-zinc-500 rounded-lg hover:bg-zinc-100 dark:text-zinc-400 dark:hover:bg-zinc-700">
            <%= eden_icon("cog", size: :md) %>
            <span class="ml-3">Settings</span>
          </a>
        </li>
      </ul>

      <%# Divider %>
      <hr class="my-4 border-zinc-200 dark:border-zinc-700">

      <%# CTA box %>
      <div class="p-4 rounded-lg bg-gold-50 dark:bg-gold-900/30">
        <div class="flex items-center mb-3">
          <span class="text-sm font-semibold text-gold-900 dark:text-gold-200">Upgrade to Pro</span>
          <%= eden_badge(text: "New", variant: :warning, size: :sm) %>
        </div>
        <p class="text-xs text-gold-800 dark:text-gold-300 mb-3">Unlock advanced analytics, priority support, and more.</p>
        <%= eden_button(variant: :primary, size: :xs) { "Get started" } %>
      </div>
    </div>
  </aside>
<% end %>

<%= styleguide_block_example(
  title: "Icon-only Sidebar",
  description: "Compact icon-only sidebar with tooltips for space-constrained layouts",
  source: 'eden_icon("home", size: :md)
eden_icon("chart-bar", size: :md)'
) do %>
  <aside class="w-16 bg-white border-r border-zinc-200 dark:bg-zinc-800 dark:border-zinc-700 h-[500px]">
    <div class="flex flex-col items-center py-4 h-full justify-between">
      <div class="flex flex-col items-center space-y-1">
        <%# Logo %>
        <div class="w-10 h-10 rounded-lg bg-gold-500 flex items-center justify-center mb-4">
          <span class="text-white font-bold">E</span>
        </div>
        <% [
          ["home", true],
          ["chart-bar", false],
          ["shopping-cart", false],
          ["user", false],
          ["envelope", false],
          ["document", false],
        ].each do |icon, active| %>
          <%= eden_tooltip(text: icon.titleize, placement: :right) do %>
            <a href="#" class="flex items-center justify-center w-10 h-10 rounded-lg <%= active ? 'bg-gold-100 dark:bg-gold-900/30 text-gold-600 dark:text-gold-400' : 'text-zinc-500 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-700' %>">
              <%= eden_icon(icon, size: :md) %>
            </a>
          <% end %>
        <% end %>
      </div>
      <div class="flex flex-col items-center space-y-1">
        <%= eden_tooltip(text: "Settings", placement: :right) do %>
          <a href="#" class="flex items-center justify-center w-10 h-10 rounded-lg text-zinc-500 dark:text-zinc-400 hover:bg-zinc-100 dark:hover:bg-zinc-700">
            <%= eden_icon("cog", size: :md) %>
          </a>
        <% end %>
        <%= eden_avatar(initials: "JD", size: :sm) %>
      </div>
    </div>
  </aside>
<% end %>
