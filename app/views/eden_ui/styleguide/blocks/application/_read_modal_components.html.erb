          <%= eden_badge(text: "Admin", variant: :primary, size: :sm) %>
          <%= eden_badge(text: "Active", variant: :success, size: :sm) %>
        </div>
      </div>
      <div class="space-y-3 text-sm mb-4">
        <% [
          ["envelope", "bonnie@company.com"],
          ["phone", "+1 (555) 234-5678"],
          ["map-pin", "San Francisco, CA"],
          ["calendar", "Joined March 2021"],
        ].each do |icon, value| %>
          <div class="flex items-center gap-2 text-zinc-500 dark:text-zinc-400">
            <%= eden_icon(icon, size: :sm) %>
            <span><%= value %></span>
          </div>
        <% end %>
      </div>
      <div class="flex items-center gap-2 border-t border-zinc-200 dark:border-zinc-700 pt-4">
        <%= eden_button(variant: :primary, size: :sm) { "Edit user" } %>
        <%= eden_button(variant: :ghost, size: :sm) { "Message" } %>
      </div>
    </div>
  </div>
<% end %>
