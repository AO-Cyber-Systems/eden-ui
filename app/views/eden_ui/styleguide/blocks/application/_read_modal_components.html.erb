        <button class="text-zinc-400 hover:bg-zinc-200 hover:text-zinc-900 rounded-lg text-sm p-1.5 dark:hover:bg-zinc-600 dark:hover:text-white">
          <%= eden_icon("x-mark", size: :sm) %>
        </button>
      </div>
      <div class="text-center mb-4">
        <div class="flex justify-center mb-3">
          <%= eden_avatar(initials: "BG", size: :lg) %>
        </div>
        <h3 class="text-lg font-semibold text-zinc-900 dark:text-white">Bonnie Green</h3>
        <p class="text-sm text-zinc-500 dark:text-zinc-400">Senior Developer</p>
