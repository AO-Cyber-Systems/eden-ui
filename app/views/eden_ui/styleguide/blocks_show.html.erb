<div class="max-w-5xl mx-auto">
  <%# Breadcrumb %>
  <div class="flex items-center gap-2 text-sm text-zinc-400 dark:text-zinc-500 mb-6">
    <a href="<%= eden_ui.styleguide_blocks_path %>" class="hover:text-zinc-600 dark:hover:text-zinc-300 transition-colors">Blocks</a>
    <span>/</span>
    <a href="<%= eden_ui.styleguide_block_category_path(block_category: @block_category_slug) %>" class="hover:text-zinc-600 dark:hover:text-zinc-300 transition-colors"><%= @block_category[:label] %></a>
    <span>/</span>
    <span class="text-zinc-900 dark:text-white font-medium"><%= @block.name %></span>
  </div>

  <%# Header %>
  <div class="mb-8 flex items-start justify-between">
    <div>
      <h1 class="text-2xl lg:text-3xl font-display font-bold text-zinc-900 dark:text-white mb-2"><%= @block.name %></h1>
      <p class="text-zinc-500 dark:text-zinc-400"><%= @block.description %></p>
    </div>
    <a href="<%= eden_ui.styleguide_block_preview_path(block_category: @block_category_slug, block: @block.slug) %>"
       target="_blank"
       class="flex-shrink-0 flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-lg border border-zinc-200 dark:border-zinc-700 text-zinc-600 dark:text-zinc-400 hover:bg-zinc-50 dark:hover:bg-zinc-800 transition-colors">
      Full page preview
      <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"/></svg>
    </a>
  </div>

  <%# Block examples %>
  <div class="space-y-8">
    <% partial_path = "eden_ui/styleguide/blocks/#{@block_category_slug}/#{@block.slug}" %>
    <% if lookup_context.exists?(partial_path, [], true) %>
      <%= render partial: partial_path %>
    <% else %>
      <div class="p-12 border border-dashed border-zinc-300 dark:border-zinc-700 rounded-xl text-center">
        <div class="text-zinc-400 dark:text-zinc-500 mb-2">
          <%= eden_icon("document", size: :lg) %>
        </div>
        <p class="text-sm text-zinc-500 dark:text-zinc-400">Block examples coming soon.</p>
        <p class="text-xs text-zinc-400 dark:text-zinc-500 mt-1">Partial: <code class="px-1.5 py-0.5 rounded bg-zinc-100 dark:bg-zinc-800">_<%= @block.slug %>.html.erb</code></p>
      </div>
    <% end %>
  </div>
</div>
