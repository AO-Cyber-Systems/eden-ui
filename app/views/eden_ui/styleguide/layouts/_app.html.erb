<%
  sidebar_items = [
    { label: "Dashboard", href: "#", icon: "home", active: true },
    { label: "Projects", href: "#", icon: "document" },
    { label: "Team", href: "#", icon: "user" },
    { label: "Messages", href: "#", icon: "envelope", badge: "3" },
    { label: "Analytics", href: "#", icon: "chart-bar" },
  ]
  sidebar_bottom_items = [
    { label: "Settings", href: "#", icon: "cog" },
    { label: "Help & Support", href: "#", icon: "question-mark-circle" },
  ]
  footer_links = [
    { label: "Privacy Policy", path: "#" },
    { label: "Terms", path: "#" },
    { label: "Contact", path: "#" },
  ]
  user = Struct.new(:name, :email).new("Jane Doe", "jane@example.com")
%>

<%= eden_app_layout(app_name: "Eden Demo", sidebar_items: sidebar_items, sidebar_bottom_items: sidebar_bottom_items, footer_links: footer_links, user: user) do %>
  <div class="p-6">
    <%# Page header %>
    <div class="mb-8">
      <h1 class="text-2xl font-display font-bold text-gray-900 dark:text-white">Dashboard</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Welcome back, Jane. Here is what is happening with your projects.</p>
    </div>

    <%# Stats cards row %>
    <div class="mb-8 grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-4">
      <%= eden_card do %>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Revenue</p>
            <p class="mt-1 text-2xl font-display font-bold text-gray-900 dark:text-white">$45,231</p>
          </div>
          <div class="rounded-full bg-green-100 p-3 dark:bg-green-900/30">
            <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.306a11.95 11.95 0 015.814-5.518l2.74-1.22m0 0l-5.94-2.281m5.94 2.28l-2.28 5.941" />
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <%= eden_badge(text: "+12.5%", variant: :success, size: :xs) %>
          <span class="ml-2 text-gray-500 dark:text-gray-400">vs last month</span>
        </div>
      <% end %>

      <%= eden_card do %>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Projects</p>
            <p class="mt-1 text-2xl font-display font-bold text-gray-900 dark:text-white">12</p>
          </div>
          <div class="rounded-full bg-blue-100 p-3 dark:bg-blue-900/30">
            <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <%= eden_badge(text: "+3 new", variant: :info, size: :xs) %>
          <span class="ml-2 text-gray-500 dark:text-gray-400">this week</span>
        </div>
      <% end %>

      <%= eden_card do %>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Team Members</p>
            <p class="mt-1 text-2xl font-display font-bold text-gray-900 dark:text-white">24</p>
          </div>
          <div class="rounded-full bg-purple-100 p-3 dark:bg-purple-900/30">
            <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <%= eden_badge(text: "2 online", variant: :success, size: :xs) %>
          <span class="ml-2 text-gray-500 dark:text-gray-400">right now</span>
        </div>
      <% end %>

      <%= eden_card do %>
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Open Tasks</p>
            <p class="mt-1 text-2xl font-display font-bold text-gray-900 dark:text-white">38</p>
          </div>
          <div class="rounded-full bg-orange-100 p-3 dark:bg-orange-900/30">
            <svg class="h-6 w-6 text-orange-600 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15a2.25 2.25 0 012.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
            </svg>
          </div>
        </div>
        <div class="mt-2 flex items-center text-sm">
          <%= eden_badge(text: "5 overdue", variant: :danger, size: :xs) %>
          <span class="ml-2 text-gray-500 dark:text-gray-400">need attention</span>
        </div>
      <% end %>
    </div>

    <%# Alert %>
    <%= eden_alert(variant: :info, dismissible: true, bordered: true) do %>
      <span class="font-medium">Heads up!</span> A new version of the platform is available. Please review the changelog and update when convenient.
    <% end %>

    <%# Recent projects table %>
    <div class="mt-8">
      <%= eden_card do %>
        <div class="mb-4 flex items-center justify-between">
          <h2 class="text-lg font-display font-semibold text-gray-900 dark:text-white">Recent Projects</h2>
          <%= eden_button(variant: :primary, size: :sm) { "View All" } %>
        </div>

        <%= eden_table(striped: true, hoverable: true) do %>
          <%= eden_table_head do %>
            <th scope="col" class="px-6 py-3">Project</th>
            <th scope="col" class="px-6 py-3">Status</th>
            <th scope="col" class="px-6 py-3">Progress</th>
            <th scope="col" class="px-6 py-3">Team</th>
            <th scope="col" class="px-6 py-3">Due Date</th>
          <% end %>
          <%= eden_table_row do %>
            <td class="whitespace-nowrap px-6 py-4 font-medium text-gray-900 dark:text-white">Website Redesign</td>
            <td class="px-6 py-4"><%= eden_badge(text: "In Progress", variant: :info, pill: true) %></td>
            <td class="px-6 py-4 min-w-[140px]"><%= eden_progress(value: 72, size: :sm, variant: :primary) %></td>
            <td class="px-6 py-4">
              <div class="flex -space-x-2">
                <%= eden_avatar(initials: "JD", size: :xs) %>
                <%= eden_avatar(initials: "AK", size: :xs) %>
                <%= eden_avatar(initials: "ML", size: :xs) %>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Mar 15, 2026</td>
          <% end %>
          <%= eden_table_row do %>
            <td class="whitespace-nowrap px-6 py-4 font-medium text-gray-900 dark:text-white">Mobile App v2</td>
            <td class="px-6 py-4"><%= eden_badge(text: "Review", variant: :warning, pill: true) %></td>
            <td class="px-6 py-4 min-w-[140px]"><%= eden_progress(value: 90, size: :sm, variant: :success) %></td>
            <td class="px-6 py-4">
              <div class="flex -space-x-2">
                <%= eden_avatar(initials: "BT", size: :xs) %>
                <%= eden_avatar(initials: "SR", size: :xs) %>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Feb 28, 2026</td>
          <% end %>
          <%= eden_table_row do %>
            <td class="whitespace-nowrap px-6 py-4 font-medium text-gray-900 dark:text-white">API Integration</td>
            <td class="px-6 py-4"><%= eden_badge(text: "Completed", variant: :success, pill: true) %></td>
            <td class="px-6 py-4 min-w-[140px]"><%= eden_progress(value: 100, size: :sm, variant: :success) %></td>
            <td class="px-6 py-4">
              <div class="flex -space-x-2">
                <%= eden_avatar(initials: "JD", size: :xs) %>
                <%= eden_avatar(initials: "KP", size: :xs) %>
                <%= eden_avatar(initials: "LM", size: :xs) %>
                <%= eden_avatar(initials: "NR", size: :xs) %>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Feb 10, 2026</td>
          <% end %>
          <%= eden_table_row do %>
            <td class="whitespace-nowrap px-6 py-4 font-medium text-gray-900 dark:text-white">Customer Portal</td>
            <td class="px-6 py-4"><%= eden_badge(text: "Planning", variant: :default, pill: true) %></td>
            <td class="px-6 py-4 min-w-[140px]"><%= eden_progress(value: 15, size: :sm, variant: :primary) %></td>
            <td class="px-6 py-4">
              <div class="flex -space-x-2">
                <%= eden_avatar(initials: "AK", size: :xs) %>
                <%= eden_avatar(initials: "ML", size: :xs) %>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Apr 1, 2026</td>
          <% end %>
          <%= eden_table_row do %>
            <td class="whitespace-nowrap px-6 py-4 font-medium text-gray-900 dark:text-white">Data Pipeline</td>
            <td class="px-6 py-4"><%= eden_badge(text: "On Hold", variant: :danger, pill: true) %></td>
            <td class="px-6 py-4 min-w-[140px]"><%= eden_progress(value: 45, size: :sm, variant: :danger) %></td>
            <td class="px-6 py-4">
              <div class="flex -space-x-2">
                <%= eden_avatar(initials: "SR", size: :xs) %>
              </div>
            </td>
            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">Mar 30, 2026</td>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
