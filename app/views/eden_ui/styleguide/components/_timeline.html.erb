<%# Timeline component preview %>

<%= styleguide_example(title: "Vertical timeline", source: 'eden_timeline do
  eden_timeline_item(
    title: "Application created",
    datetime: "February 2025",
    body: "Initial project setup and repository configuration completed."
  )
  eden_timeline_item(
    title: "Design phase",
    datetime: "March 2025",
    body: "UI components designed and prototyped in Figma."
  )
  eden_timeline_item(
    title: "Development started",
    datetime: "April 2025",
    body: "Core component library built with Tailwind CSS and tested."
  )
  eden_timeline_item(
    title: "Version 1.0 released",
    datetime: "May 2025",
    body: "First stable release published to production."
  )
end') do %>
  <div class="w-full">
    <%= eden_timeline do %>
      <%= eden_timeline_item(
        title: "Application created",
        datetime: "February 2025",
        body: "Initial project setup and repository configuration completed."
      ) %>
      <%= eden_timeline_item(
        title: "Design phase",
        datetime: "March 2025",
        body: "UI components designed and prototyped in Figma."
      ) %>
      <%= eden_timeline_item(
        title: "Development started",
        datetime: "April 2025",
        body: "Core component library built with Tailwind CSS and tested."
      ) %>
      <%= eden_timeline_item(
        title: "Version 1.0 released",
        datetime: "May 2025",
        body: "First stable release published to production."
      ) %>
    <% end %>
  </div>
<% end %>

