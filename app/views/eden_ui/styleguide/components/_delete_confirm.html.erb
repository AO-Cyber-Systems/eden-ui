<%# Delete Confirm component preview %>

<%= styleguide_example(
  title: "Default",
  description: "Confirmation dialog for destructive actions with a warning icon.",
  source: 'eden_delete_confirm(id: "delete-user-modal", title: "Confirm Deletion", message: "Are you sure you want to delete this user? This action cannot be undone.", form_url: "/users/1")'
) do %>
  <div class="flex gap-3">
    <button type="button" onclick="document.getElementById('delete-user-modal').classList.remove('hidden'); document.getElementById('delete-user-modal').classList.add('flex')" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-800">
      Delete User
    </button>
  </div>

  <%= eden_delete_confirm(id: "delete-user-modal", title: "Confirm Deletion", message: "Are you sure you want to delete this user? All of their data will be permanently removed. This action cannot be undone.", form_url: "#") %>
<% end %>

