<%= styleguide_example(title: "403 Forbidden with Block Content", description: "Error page with custom block content for additional navigation.",
  source: 'eden_error_page(
  code: "403",
  title: "Access denied",
  description: "You don\'t have permission to access this resource.",
  back_href: "/dashboard"
) do
  content_tag(:p, "Request access from your administrator.", class: "text-sm text-gray-500")
end') do %>
  <div class="rounded-lg border border-gray-200 dark:border-gray-700">
    <%= eden_error_page(
      code: "403",
      title: "Access denied",
      description: "You don't have permission to access this resource.",
      back_href: "/dashboard"
    ) do %>
      <div class="text-center">
        <p class="mb-4 text-sm text-gray-500 dark:text-gray-400">Here are some pages you can access:</p>
        <div class="flex flex-wrap justify-center gap-2">
          <%= eden_button(variant: :secondary, size: :sm, href: "/dashboard") { "Dashboard" } %>
          <%= eden_button(variant: :secondary, size: :sm, href: "/settings") { "Settings" } %>
          <%= eden_button(variant: :secondary, size: :sm, href: "/help") { "Help Center" } %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
