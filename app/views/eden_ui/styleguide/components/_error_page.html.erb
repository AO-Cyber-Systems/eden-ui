<%# Error Page component preview %>

<%= styleguide_example(title: "404 Not Found", description: "Standard 404 error page with back button and support link.",
  source: 'eden_error_page(
  code: "404",
  title: "Page not found",
  description: "Sorry, we can\'t find that page. You\'ll find lots to explore on the home page.",
  back_href: "/",
  back_text: "Go back home",
  support_href: "/contact",
  support_text: "Contact support"
)') do %>
  <div class="rounded-lg border border-gray-200 dark:border-gray-700">
    <%= eden_error_page(
      code: "404",
      title: "Page not found",
      description: "Sorry, we can't find that page. You'll find lots to explore on the home page.",
      back_href: "/",
      back_text: "Go back home",
      support_href: "/contact",
      support_text: "Contact support"
    ) %>
  </div>
<% end %>

<%= styleguide_example(title: "500 Server Error", description: "Internal server error page.",
  source: 'eden_error_page(
  code: "500",
  title: "Internal server error",
  description: "Something went wrong on our end. Please try again later.",
  back_href: "/",
  back_text: "Return to dashboard",
