<%# Order Summary component preview %>

<%= styleguide_example(title: "Default", description: "Standard order summary with all fields.",
  source: 'eden_order_summary(subtotal: "$89.97", tax: "$7.20", shipping: "$5.99", total: "$103.16")') do %>
  <div class="max-w-sm">
    <%= eden_order_summary(subtotal: "$89.97", tax: "$7.20", shipping: "$5.99", total: "$103.16") %>
  </div>
