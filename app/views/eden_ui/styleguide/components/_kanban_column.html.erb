<%# Kanban Column component preview %>

<%= styleguide_example(title: "Default Column", description: "A single kanban column with cards.",
  source: 'eden_kanban_column(title: "To Do", count: 2) do
  eden_kanban_card(title: "Task one") +
  eden_kanban_card(title: "Task two")
end') do %>
  <div class="max-w-sm">
    <%= eden_kanban_column(title: "To Do", count: 2) do %>
      <%= eden_kanban_card(title: "Research user needs", priority: :high) %>
      <%= eden_kanban_card(title: "Draft proposal", priority: :medium, due_date: "Feb 28") %>
    <% end %>
  </div>
<% end %>

<%= styleguide_example(title: "Color Variants", description: "Columns with different top border colors.",
  source: 'eden_kanban_column(title: "Default", color: :default) { ... }
eden_kanban_column(title: "Primary", color: :primary) { ... }
eden_kanban_column(title: "Success", color: :success) { ... }
eden_kanban_column(title: "Warning", color: :warning) { ... }
eden_kanban_column(title: "Danger", color: :danger) { ... }') do %>
  <div class="flex gap-4 overflow-x-auto pb-4">
    <%= eden_kanban_column(title: "Default", count: 1, color: :default) do %>
      <%= eden_kanban_card(title: "Sample card") %>
    <% end %>
    <%= eden_kanban_column(title: "Primary", count: 1, color: :primary) do %>
      <%= eden_kanban_card(title: "Sample card") %>
    <% end %>
    <%= eden_kanban_column(title: "Success", count: 1, color: :success) do %>
      <%= eden_kanban_card(title: "Sample card") %>
    <% end %>
    <%= eden_kanban_column(title: "Warning", count: 1, color: :warning) do %>
      <%= eden_kanban_card(title: "Sample card") %>
    <% end %>
    <%= eden_kanban_column(title: "Danger", count: 1, color: :danger) do %>
      <%= eden_kanban_card(title: "Sample card") %>
    <% end %>
  </div>
<% end %>

<%= styleguide_example(title: "Empty Column", description: "Column with no cards shows the add item button.",
  source: 'eden_kanban_column(title: "Empty", color: :primary)') do %>
  <div class="max-w-sm">
    <%= eden_kanban_column(title: "Empty Column", color: :primary) %>
  </div>
<% end %>
