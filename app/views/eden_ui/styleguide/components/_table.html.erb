        <td>$1,999</td>
      <% end %>
      <%= eden_table_row do %>
        <td>Magic Mouse 2</td>
        <td>Accessories</td>
        <td>$99</td>
      <% end %>
      <%= eden_table_row do %>
        <td>Google Pixel Phone</td>
        <td>Phones</td>
