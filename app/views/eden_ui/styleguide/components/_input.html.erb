<%# Input component preview %>

<%= styleguide_example(title: "Input Types", source: 'eden_input(type: :text, placeholder: "Enter your name")
eden_input(type: :email, placeholder: "you@example.com")
eden_input(type: :password, placeholder: "Password")') do %>
  <%= eden_input(type: :text, placeholder: "Enter your name") %>
  <%= eden_input(type: :email, placeholder: "you@example.com") %>
  <%= eden_input(type: :password, placeholder: "Password") %>
<% end %>

<%= styleguide_example(title: "Sizes", source: 'eden_input(size: :sm, placeholder: "Small input")
eden_input(size: :md, placeholder: "Medium input")
eden_input(size: :lg, placeholder: "Large input")') do %>
  <%= eden_input(size: :sm, placeholder: "Small input") %>
  <%= eden_input(size: :md, placeholder: "Medium input") %>
  <%= eden_input(size: :lg, placeholder: "Large input") %>
<% end %>

