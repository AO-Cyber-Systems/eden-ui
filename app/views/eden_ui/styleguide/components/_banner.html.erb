<%= styleguide_example(title: "Dismissible (default behavior)", description: "Banners are dismissible by default", source: 'eden_banner(variant: :info, dismissible: true) do
  content_tag(:span, "This banner can be dismissed.")
end

# Non-dismissible:
eden_banner(variant: :info, dismissible: false) do
  content_tag(:span, "This banner cannot be dismissed.")
end') do %>
  <div class="relative w-full space-y-3">
    <div class="flex justify-between items-center p-4 border-b bg-blue-50 border-blue-300 dark:bg-blue-900 dark:border-blue-800 rounded-lg w-full">
      <div class="flex items-center mx-auto">
        <span class="text-sm text-blue-700 dark:text-blue-300">This banner can be dismissed (click the X).</span>
      </div>
      <button type="button" class="flex-shrink-0 inline-flex justify-center w-7 h-7 items-center text-gray-400 hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm dark:hover:bg-gray-600 dark:hover:text-white">
        <svg class="w-3 h-3" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
      </button>
    </div>
    <div class="flex justify-between items-center p-4 border-b bg-blue-50 border-blue-300 dark:bg-blue-900 dark:border-blue-800 rounded-lg w-full">
      <div class="flex items-center mx-auto">
        <span class="text-sm text-blue-700 dark:text-blue-300">This banner cannot be dismissed (no close button).</span>
      </div>
    </div>
  </div>
<% end %>
