<%# ── Banner component previews ── %>

<%#
  Note: Banners are fixed-position by default. For the styleguide preview,
  we render them as static examples inside a relative container so they
  display inline rather than fixed to the viewport.
%>

<%= styleguide_example(title: "Default", source: 'eden_banner(variant: :default) do
  content_tag(:span, "This is a default banner notification.")
end') do %>
  <div class="relative w-full" style="min-height: 56px;">
    <div class="flex justify-between items-center p-4 border-b bg-gray-50 border-gray-300 dark:bg-gray-700 dark:border-gray-600 rounded-lg w-full">
      <div class="flex items-center mx-auto">
        <span class="text-sm text-gray-700 dark:text-gray-300">This is a default banner notification.</span>
      </div>
    </div>
  </div>
<% end %>

