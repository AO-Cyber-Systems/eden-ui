<%# Carousel component preview — renders partial directly to pass correct locals %>

<%= styleguide_example(
  title: "Default Carousel",
  description: "A carousel with placeholder slides, navigation controls, and indicators.",
  source: 'eden_carousel do
  # slide content
end'
) do %>
  <div class="w-full">
    <%= render partial: "eden_ui/components/carousel", locals: {
      id: "demo-carousel", slides: [], indicators: true, controls: true,
      autoplay: false, interval: 5000, html_options: {},
      content: capture do %>
        <div data-eden-carousel-target="slide" class="duration-700 ease-in-out">
          <div class="flex items-center justify-center h-56 md:h-96 bg-zinc-200 dark:bg-zinc-800 rounded-lg">
            <span class="text-2xl font-semibold text-zinc-400 dark:text-zinc-500">Slide 1</span>
          </div>
        </div>
        <div data-eden-carousel-target="slide" class="hidden duration-700 ease-in-out">
          <div class="flex items-center justify-center h-56 md:h-96 bg-zinc-300 dark:bg-zinc-700 rounded-lg">
            <span class="text-2xl font-semibold text-zinc-400 dark:text-zinc-500">Slide 2</span>
          </div>
        </div>
        <div data-eden-carousel-target="slide" class="hidden duration-700 ease-in-out">
          <div class="flex items-center justify-center h-56 md:h-96 bg-zinc-200 dark:bg-zinc-800 rounded-lg">
            <span class="text-2xl font-semibold text-zinc-400 dark:text-zinc-500">Slide 3</span>
          </div>
        </div>
      <% end
    } %>
  </div>
<% end %>

