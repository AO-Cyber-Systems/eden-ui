  language: "SQL",
  copyable: false
)') do %>
  <%= eden_code_block(
    code: "SELECT * FROM users WHERE active = true;",
    language: "SQL",
    copyable: false
  ) %>
<% end %>

<%= styleguide_example(title: "Plain (No Language)", description: "Code block without a language label.",
  source: 'eden_code_block(code: "gem install eden_ui")') do %>
