<%# ── Drawer component previews ── %>

<%= styleguide_example(title: "Left Drawer (default)", source: 'eden_button(variant: :primary, data: { action: "eden-drawer#open", eden_drawer_outlet: "#drawer-left" }) { "Open Left Drawer" }

eden_drawer(id: "drawer-left", position: :left) do
  content_tag(:p, "This is the left drawer content.", class: "text-gray-500 dark:text-gray-400")
end') do %>
  <%= eden_button(variant: :primary, data: { action: "eden-drawer#open", "eden-drawer-outlet": "#drawer-left" }) { "Open Left Drawer" } %>

  <%= eden_drawer(id: "drawer-left", position: :left) do %>
    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">This is the left drawer content. It slides in from the left side of the screen.</p>
    <div class="space-y-2">
      <%= eden_button(variant: :primary, size: :sm) { "Action" } %>
      <%= eden_button(variant: :default, size: :sm, outline: true) { "Cancel" } %>
    </div>
  <% end %>
<% end %>

